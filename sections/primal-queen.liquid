
<section class="primal-queen-hero">
  <div class="primal-queen-container">
    <div class="primal-queen-left">
      {% for block in section.blocks %}
        {% render 'primal-queen-block', block: block %}
      {% endfor %}
    </div>
    <div class="primal-queen-right">
      {% if section.settings.main_image != blank %}
        <div class="primal-queen-image-frame">
          <img src="{{ section.settings.main_image | img_url: '800x' }}" alt="Hero Image">
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .primal-queen-hero {
    background: {{ section.settings.bg_color }};
    padding: 60px 20px;
  }

  .primal-queen-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1170px;
    margin: auto;
    gap: 40px;
    flex-wrap: wrap;
  }

  .primal-queen-left {
    flex: 1 1 50%;
  }

  .primal-queen-right {
    flex: 1 1 50%;
    text-align: center;
  }

  .primal-queen-image-frame {
    border: 3px solid #000;
    border-radius: 50% / 15%;
    overflow: hidden;
    position: relative;
    display: inline-block;
  }

  .primal-queen-image-frame img {
    max-width: 100%;
    display: block;
  }
</style>

{% schema %}
{
  "name": "Primal Queen Hero",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fff0f6"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Right Image"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Heading Text",
          "default": "⚠ ATTENTION: 82% Of Women Suffer From Imbalanced Hormones & Low Energy"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Subheading Text",
          "default": "Here’s Why <b>Beef Organ Superfoods</b> Are The Secret to Balancing Hormones & All Day Energy"
        }
      ]
    },
    {
      "type": "button",
      "name": "CTA Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button Label",
          "default": "UNLOCK YOUR TRUE POWER"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    },
    {
      "type": "guarantee",
      "name": "Guarantee Line",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Guarantee Text",
          "default": "365-Day Money Back Guarantee • Free Shipping*"
        }
      ]
    },
    {
        "type": "organ_supplement",
        "name": "Organ Supplement",
        "settings": [
            {
                "type": "text",
                "id": "organ_name",
                "label": "Organ Name",
                "default": "Beef Liver"
            },
            {
                "type": "richtext",
                "id": "organ_description",
                "label": "Organ Description",
                "default": "<p>Rich in essential vitamins and minerals...</p>"
            },
            {
                "type": "text",
                "id": "organ_benefits",
                "label": "Key Benefits",
                "default": "High in Vitamin A, B12, and Iron"
            },
            {
                "type": "image_picker",
                "id": "organ_icon",
                "label": "Organ Icon"
            },
            {
                "type": "checkbox",
                "id": "use_section_colors",
                "label": "Use Section Colors",
                "default": true,
                "info": "Use section-level colors instead of custom colors"
            },
            {
                "type": "color",
                "id": "custom_background_color",
                "label": "Custom Background Color",
                "default": "#ffffff"
            },
            {
                "type": "color",
                "id": "custom_border_color",
                "label": "Custom Border Color",
                "default": "#8B0000"
            },
            {
                "type": "color",
                "id": "custom_title_color",
                "label": "Custom Title Color",
                "default": "#8B0000"
            },
            {
                "type": "color",
                "id": "custom_description_color",
                "label": "Custom Description Color",
                "default": "#333333"
            },
            {
                "type": "color",
                "id": "custom_benefits_color",
                "label": "Custom Benefits Color",
                "default": "#666666"
            },
            {
                "type": "range",
                "id": "organ_title_size",
                "label": "Title size (px)",
                "min": 14,
                "max": 28,
                "default": 18
            },
            {
                "type": "range",
                "id": "description_size",
                "label": "Description size (px)",
                "min": 12,
                "max": 20,
                "default": 14
            },
            {
                "type": "range",
                "id": "benefits_text_size",
                "label": "Benefits text size (px)",
                "min": 10,
                "max": 18,
                "default": 13
            },
            {
                "type": "range",
                "id": "organ_icon_size",
                "label": "Organ icon size (px)",
                "min": 24,
                "max": 100,
                "default": 60
            },
            {
                "type": "range",
                "id": "custom_border_width",
                "label": "Custom Border Width (px)",
                "min": 0,
                "max": 10,
                "step": 1,
                "unit": "px",
                "default": 2
            },
            {
                "type": "checkbox",
                "id": "show_benefits_divider",
                "label": "Show Benefits Divider",
                "default": true,
                "info": "Display divider line below benefits text"
            },
            {
                "type": "color",
                "id": "custom_divider_color",
                "label": "Custom Divider Color",
                "default": "#8B0000"
            },
            {
                "type": "range",
                "id": "margin_top",
                "label": "Top Margin (px)",
                "min": -50,
                "max": 50,
                "step": 1,
                "unit": "px",
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "label": "Bottom Margin (px)",
                "min": -50,
                "max": 50,
                "step": 1,
                "unit": "px",
                "default": 0
            },
            {
                "type": "checkbox",
                "id": "enable_hover_effect",
                "label": "Enable Hover Effect",
                "default": true,
                "info": "Add hover animation to organ card"
            },
            {
                "type": "url",
                "id": "organ_link",
                "label": "Organ Product Link",
                "info": "Link to product page for this organ"
            }
        ]
    },
    {
      "type": "review",
      "name": "Customer Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Reviewer Image"
        },
        {
          "type": "text",
          "id": "review_text",
          "label": "Review Text",
          "default": "I feel more energized and even have less bloating. And most importantly, it’s helped in the bedroom"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name",
          "default": "Emma L."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Primal Queen Hero",
      "category": "Custom Sections",
      "blocks": [
        { "type": "heading" },
        { "type": "subheading" },
        { "type": "button" },
        { "type": "guarantee" },
        { "type": "review" }
      ]
    }
  ]
}
{% endschema %}
