<section class="primal-queen-hero">
  <div class="primal-queen-container">
    <div class="primal-queen-left">
      {% for block in section.blocks %}
        {% render 'primal-queen-block', block: block %}
      {% endfor %}
    </div>
    <div class="primal-queen-right">
      {% if section.settings.main_image != blank %}
        <div class="primal-queen-image-frame">
          <img src="{{ section.settings.main_image | img_url: '800x' }}" alt="Hero Image">
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .primal-queen-hero {
    background: {{ section.settings.bg_color }};
    padding: 60px 20px;
  }

  .primal-queen-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: auto;
    gap: 40px;
    flex-wrap: wrap;
  }

  .primal-queen-left {
    flex: 1 1 50%;
  }

  .primal-queen-right {
    flex: 1 1 50%;
    text-align: center;
  }

  .primal-queen-image-frame {
    border: 3px solid #000;
    border-radius: 50% / 15%;
    overflow: hidden;
    position: relative;
    display: inline-block;
  }

  .primal-queen-image-frame img {
    max-width: 100%;
    display: block;
  }
</style>

{% schema %}
{
  "name": "Primal Queen Hero",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#fff0f6"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Right Image"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Heading Text",
          "default": "⚠ ATTENTION: 82% Of Women Suffer From Imbalanced Hormones & Low Energy"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Subheading Text",
          "default": "Here’s Why <b>Beef Organ Superfoods</b> Are The Secret to Balancing Hormones & All Day Energy"
        }
      ]
    },
    {
      "type": "button",
      "name": "CTA Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button Label",
          "default": "UNLOCK YOUR TRUE POWER"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    },
    {
      "type": "guarantee",
      "name": "Guarantee Line",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Guarantee Text",
          "default": "365-Day Money Back Guarantee • Free Shipping*"
        }
      ]
    },
    {
      "type": "review",
      "name": "Customer Review",
      "settings": [
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Reviewer Image"
        },
        {
          "type": "text",
          "id": "review_text",
          "label": "Review Text",
          "default": "I feel more energized and even have less bloating. And most importantly, it’s helped in the bedroom"
        },
        {
          "type": "text",
          "id": "reviewer_name",
          "label": "Reviewer Name",
          "default": "Emma L."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Primal Queen Hero",
      "category": "Custom Sections",
      "blocks": [
        { "type": "heading" },
        { "type": "subheading" },
        { "type": "button" },
        { "type": "guarantee" },
        { "type": "review" }
      ]
    }
  ]
}
{% endschema %}
