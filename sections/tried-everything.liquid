{% render 'tried-evrything-block' %}
{% schema %}
{
  "name": "Tried Everything Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "min": 12,
      "max": 60,
      "step": 1,
      "default": 28
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Item Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "text_font_size",
      "label": "Item Font Size (px)",
      "min": 12,
      "max": 40,
      "step": 1,
      "default": 18
    },
    {
      "type": "color",
      "id": "point_color",
      "label": "Bullet/Point Color",
      "default": "#ff0000"
    }
  ],
  "blocks": [
    {
      "type": "tried_everything",
      "name": "Tried Everything Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "I Tried Everything From:"
        },
        {
          "type": "text",
          "id": "item_1",
          "label": "Item 1",
          "default": "Low Carb"
        },
        {
          "type": "text",
          "id": "item_2",
          "label": "Item 2",
          "default": "Paleo"
        },
        {
          "type": "text",
          "id": "item_3",
          "label": "Item 3",
          "default": "Plant Based"
        },
        {
          "type": "text",
          "id": "item_4",
          "label": "Item 4",
          "default": "Green Drinks"
        },
        {
          "type": "text",
          "id": "item_5",
          "label": "Item 5",
          "default": "Green Juice & Powders"
        },
        {
          "type": "text",
          "id": "item_6",
          "label": "Item 6",
          "default": "Probiotics"
        },
        {
          "type": "text",
          "id": "item_7",
          "label": "Item 7",
          "default": "Keto"
        },
        {
          "type": "text",
          "id": "item_8",
          "label": "Item 8",
          "default": "Zumba & More"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Image"
        },
        {
          "type": "select",
          "id": "image_alignment",
          "label": "Image Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" }
          ],
          "default": "center"
        }
      ]
    },
    {
      "type": "content_block",
      "name": "Content Block",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Block Content",
          "default": "<p>Add additional content here</p>"
        },
        {
          "type": "color",
          "id": "content_color",
          "label": "Text Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "content_font_size",
          "label": "Font Size (px)",
          "min": 12,
          "max": 40,
          "step": 1,
          "default": 16
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Text Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" },
            { "value": "justify", "label": "Justify" }
          ],
          "default": "left"
        },
        {
          "type": "range",
          "id": "content_margin_top",
          "label": "Margin Top (px)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 20
        },
        {
          "type": "range",
          "id": "content_margin_bottom",
          "label": "Margin Bottom (px)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 20
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tried Everything Section",
      "blocks": [
        {
          "type": "tried_everything"
        },
        {
          "type": "content_block"
        }
      ]
    }
  ]
}
{% endschema %}
