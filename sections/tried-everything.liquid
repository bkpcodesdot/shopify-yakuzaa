{% render 'tried-evrything-block' %}

{% schema %}
{
  "name": "Tried Everything Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size (px)",
      "min": 12,
      "max": 60,
      "step": 1,
      "default": 28
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Item Text Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "text_font_size",
      "label": "Item Font Size (px)",
      "min": 12,
      "max": 40,
      "step": 1,
      "default": 18
    },
    {
      "type": "color",
      "id": "point_color",
      "label": "Bullet/Point Color",
      "default": "#ff0000"
    }
  ],
  "blocks": [
    {
      "type": "tried_everything",
      "name": "Tried Everything Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "I Tried Everything From:"
        },
        {
          "type": "range",
          "id": "margin_top",
          "label": "Margin Top (px)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 0
        },
        {
          "type": "range",
          "id": "margin_bottom",
          "label": "Margin Bottom (px)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 0
        },
        {
          "type": "range",
          "id": "container_width",
          "label": "Container Width (px)",
          "min": 800,
          "max": 1400,
          "step": 20,
          "default": 1200
        },
        {
          "type": "range",
          "id": "section_padding",
          "label": "Section Padding (px)",
          "min": 20,
          "max": 100,
          "step": 5,
          "default": 40
        },
        {
          "type": "range",
          "id": "content_gap",
          "label": "Content Gap (px)",
          "min": 20,
          "max": 100,
          "step": 5,
          "default": 40
        },
        {
          "type": "range",
          "id": "heading_margin_bottom",
          "label": "Heading Margin Bottom (px)",
          "min": 10,
          "max": 60,
          "step": 5,
          "default": 30
        },
        {
          "type": "range",
          "id": "heading_weight",
          "label": "Heading Font Weight",
          "min": 300,
          "max": 900,
          "step": 100,
          "default": 700
        },
        {
          "type": "range",
          "id": "items_gap",
          "label": "Items Gap (px)",
          "min": 10,
          "max": 40,
          "step": 2,
          "default": 16
        },
        {
          "type": "range",
          "id": "bullet_size",
          "label": "Bullet Size (px)",
          "min": 4,
          "max": 20,
          "step": 1,
          "default": 8
        },
        {
          "type": "range",
          "id": "item_text_weight",
          "label": "Item Text Weight",
          "min": 300,
          "max": 900,
          "step": 100,
          "default": 400
        },
        {
          "type": "range",
          "id": "image_border_radius",
          "label": "Image Border Radius (px)",
          "min": 0,
          "max": 50,
          "step": 2,
          "default": 0
        },
        {
          "type": "checkbox",
          "id": "show_x_marks",
          "label": "Show X Marks on Image",
          "default": false
        },
        {
          "type": "range",
          "id": "x_mark_size",
          "label": "X Mark Size (px)",
          "min": 20,
          "max": 80,
          "step": 5,
          "default": 40
        },
        {
          "type": "range",
          "id": "x_mark_thickness",
          "label": "X Mark Thickness (px)",
          "min": 2,
          "max": 10,
          "step": 1,
          "default": 4
        },
        {
          "type": "color",
          "id": "x_mark_color",
          "label": "X Mark Color",
          "default": "#ff1493"
        },
        {
          "type": "range",
          "id": "x_mark_1_top",
          "label": "X Mark 1 Top Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 10
        },
        {
          "type": "range",
          "id": "x_mark_1_left",
          "label": "X Mark 1 Left Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 10
        },
        {
          "type": "range",
          "id": "x_mark_2_top",
          "label": "X Mark 2 Top Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 5
        },
        {
          "type": "range",
          "id": "x_mark_2_right",
          "label": "X Mark 2 Right Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 5
        },
        {
          "type": "range",
          "id": "x_mark_3_top",
          "label": "X Mark 3 Top Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 50
        },
        {
          "type": "range",
          "id": "x_mark_3_left",
          "label": "X Mark 3 Left Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 15
        },
        {
          "type": "range",
          "id": "x_mark_4_bottom",
          "label": "X Mark 4 Bottom Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 10
        },
        {
          "type": "range",
          "id": "x_mark_4_right",
          "label": "X Mark 4 Right Position (%)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 10
        },
        {
          "type": "text",
          "id": "item_1",
          "label": "Item 1",
          "default": "Low Carb"
        },
        {
          "type": "text",
          "id": "item_2",
          "label": "Item 2",
          "default": "Paleo"
        },
        {
          "type": "text",
          "id": "item_3",
          "label": "Item 3",
          "default": "Plant Based"
        },
        {
          "type": "text",
          "id": "item_4",
          "label": "Item 4",
          "default": "Green Drinks"
        },
        {
          "type": "text",
          "id": "item_5",
          "label": "Item 5",
          "default": "Green Juice & Powders"
        },
        {
          "type": "text",
          "id": "item_6",
          "label": "Item 6",
          "default": "Probiotics"
        },
        {
          "type": "text",
          "id": "item_7",
          "label": "Item 7",
          "default": "Keto"
        },
        {
          "type": "text",
          "id": "item_8",
          "label": "Item 8",
          "default": "Zumba & More"
        },
        {
          "type": "image_picker",
          "id": "main_image",
          "label": "Main Image"
        }
      ]
    },
    {
      "type": "content_block",
      "name": "Content Block",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Block Content",
          "default": "<p>Add additional content here</p>"
        },
        {
          "type": "color",
          "id": "content_color",
          "label": "Text Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "content_font_size",
          "label": "Font Size (px)",
          "min": 12,
          "max": 40,
          "step": 1,
          "default": 16
        },
        {
          "type": "select",
          "id": "content_alignment",
          "label": "Text Alignment",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "center", "label": "Center" },
            { "value": "right", "label": "Right" },
            { "value": "justify", "label": "Justify" }
          ],
          "default": "left"
        },
        {
          "type": "range",
          "id": "content_margin_top",
          "label": "Margin Top (px)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 20
        },
        {
          "type": "range",
          "id": "content_margin_bottom",
          "label": "Margin Bottom (px)",
          "min": 0,
          "max": 100,
          "step": 5,
          "default": 20
        }
      ]
    },
    {
      "type": "organ_supplement",
      "name": "Organ Supplement",
      "settings": [
        {
          "type": "text",
          "id": "organ_name",
          "label": "Organ Name",
          "default": "Beef Liver"
        },
        {
          "type": "richtext",
          "id": "organ_description",
          "label": "Organ Description",
          "default": "<p>Rich in essential vitamins and minerals...</p>"
        },
        {
          "type": "text",
          "id": "organ_benefits",
          "label": "Key Benefits",
          "default": "High in Vitamin A, B12, and Iron"
        },
        {
          "type": "image_picker",
          "id": "organ_icon",
          "label": "Organ Icon"
        },
        {
          "type": "checkbox",
          "id": "use_section_colors",
          "label": "Use Section Colors",
          "default": true,
          "info": "Use section-level colors instead of custom colors"
        },
        {
          "type": "color",
          "id": "custom_background_color",
          "label": "Custom Background Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "custom_border_color",
          "label": "Custom Border Color",
          "default": "#8B0000"
        },
        {
          "type": "color",
          "id": "custom_title_color",
          "label": "Custom Title Color",
          "default": "#8B0000"
        },
        {
          "type": "color",
          "id": "custom_description_color",
          "label": "Custom Description Color",
          "default": "#333333"
        },
        {
          "type": "color",
          "id": "custom_benefits_color",
          "label": "Custom Benefits Color",
          "default": "#666666"
        },
        {
          "type": "range",
          "id": "organ_title_size",
          "label": "Title Size (px)",
          "min": 14,
          "max": 28,
          "step": 1,
          "default": 18
        },
        {
          "type": "range",
          "id": "description_size",
          "label": "Description Size (px)",
          "min": 12,
          "max": 20,
          "step": 1,
          "default": 14
        },
        {
          "type": "range",
          "id": "benefits_text_size",
          "label": "Benefits Text Size (px)",
          "min": 10,
          "max": 18,
          "step": 1,
          "default": 13
        },
        {
          "type": "range",
          "id": "organ_icon_size",
          "label": "Organ Icon Size (px)",
          "min": 24,
          "max": 100,
          "step": 2,
          "default": 60
        },
        {
          "type": "range",
          "id": "custom_border_width",
          "label": "Custom Border Width (px)",
          "min": 0,
          "max": 10,
          "step": 1,
          "default": 2
        },
        {
          "type": "checkbox",
          "id": "show_benefits_divider",
          "label": "Show Benefits Divider",
          "default": true,
          "info": "Display divider line below benefits text"
        },
        {
          "type": "color",
          "id": "custom_divider_color",
          "label": "Custom Divider Color",
          "default": "#8B0000"
        },
        {
          "type": "range",
          "id": "margin_top",
          "label": "Top Margin (px)",
          "min": -50,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "range",
          "id": "margin_bottom",
          "label": "Bottom Margin (px)",
          "min": -50,
          "max": 50,
          "step": 1,
          "default": 0
        },
        {
          "type": "checkbox",
          "id": "enable_hover_effect",
          "label": "Enable Hover Effect",
          "default": true,
          "info": "Add hover animation to organ card"
        },
        {
          "type": "url",
          "id": "organ_link",
          "label": "Organ Product Link",
          "info": "Link to product page for this organ"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tried Everything Section",
      "blocks": [
        {
          "type": "tried_everything"
        },
        {
          "type": "content_block"
        },
        {
          "type": "organ_supplement"
        }
      ]
    }
  ]
}
{% endschema %}