                    {%- endif -%}
                    
                    {%- if block.settings.show_author_info -%}
                      <div class="author-info">
                        {%- if block.settings.author_avatar != blank -%}
                          <img class="author-avatar" src="{{ block.settings.author_avatar | image_url: width: block.settings.avatar_size }}" alt="{{ block.settings.author_name | escape }}" width="{{ block.settings.avatar_size }}" height="{{ block.settings.avatar_size }}" loading="lazy">
                        {%- endif -%}
                        <div class="author-details">
                          {%- if block.settings.author_name != blank -%}
                            <p class="author-name">By {{ block.settings.author_name }}</p>
                          {%- endif -%}
                          {%- if block.settings.author_date != blank -%}
                            <p class="author-date">{{ block.settings.author_date }}</p>
                          {%- endif -%}
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                  
                  <style>
                    .listicle-header-{{ block.id }} {
                      margin-top: {{ block.settings.header_margin_top }}px;
                      margin-bottom: {{ block.settings.header_margin_bottom }}px;
                    }
                    
                    .listicle-header-{{ block.id }} .listicle-title {
                      font-size: {{ block.settings.title_size }}px;
                      font-weight: {{ block.settings.title_font_weight }};
                      line-height: {{ block.settings.title_line_height }};
                      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ block.settings.title_color }}{% endif %};
                      text-align: {{ block.settings.title_alignment }};
                      margin: {{ block.settings.title_margin_top }}px 0 {{ block.settings.title_margin_bottom }}px 0;
                    }
                    
                    .listicle-header-{{ block.id }} .author-info {
                      display: flex;
                      align-items: center;
                      gap: {{ block.settings.author_gap }}px;
                      margin-bottom: {{ block.settings.author_margin_bottom }}px;
                      justify-content: {{ block.settings.author_alignment }};
                    }
                    
                    .listicle-header-{{ block.id }} .author-avatar {
                      width: {{ block.settings.avatar_size }}px;
                      height: {{ block.settings.avatar_size }}px;
                      border-radius: 50%;
                      object-fit: cover;
                    }
                    
                    .listicle-header-{{ block.id }} .author-name {
                      font-size: {{ block.settings.author_name_size }}px !important;
                      font-weight: {% if section.settings.author_name_force_bold %}700 !important{% else %}{{ block.settings.author_name_font_weight }} !important{% endif %};
                      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ block.settings.author_name_color }}{% endif %} !important;
                      letter-spacing: var(--letter-spacing-body) !important;
                      margin: 0 !important;
                    }
                    
                    .listicle-header-{{ block.id }} .author-date {
                      font-size: {{ block.settings.author_date_size }}px;
                      font-weight: {{ block.settings.author_date_font_weight }};
                      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_modify: 'alpha', 0.7 }}{% else %}{{ block.settings.author_date_color }}{% endif %};
                      letter-spacing: var(--letter-spacing-body);
                      margin: 0;
                    }
                    
                    @media (max-width: 768px) {
                      .listicle-header-{{ block.id }} .listicle-title {
                        font-size: {{ block.settings.mobile_title_size }}px;
                      }
                      
                      .listicle-header-{{ block.id }} .author-name {
                        font-size: {{ block.settings.mobile_author_name_size }}px;
                      }
                      
                      .listicle-header-{{ block.id }} .author-date {
                        font-size: {{ block.settings.mobile_author_date_size }}px;
                      }
                      
                      .listicle-header-{{ block.id }} .author-info {
                        justify-content: flex-start;
                      }
                    }
                  </style>
                {%- when 'countdown_banner' -%}
                  {%- comment -%} Skip countdown banner as it's already rendered at the top {%- endcomment -%}
                {%- when 'summary' -%}
                  <div class="summary-section summary-{{ block.id }}" {{ block.shopify_attributes }}>
                    <div class="summary-text">{{ block.settings.summary_text }}</div>
                  </div>
                  
                  <style>
                    .summary-{{ block.id }} {
                      margin-top: {{ block.settings.summary_margin_top }}px;
                      margin-bottom: {{ block.settings.summary_margin_bottom }}px;
                    }
                  </style>
    
                {%- when 'limited_time_sale' -%}
                  <div {{ block.shopify_attributes }}>
                    {% render 'limited-time-sale', block: block %}
                  </div>
                {%- when 'sticky_add_to_cart' -%}
                  <div {{ block.shopify_attributes }}>
                    {% render 'sticky-add-to-cart', block: block %}
                  </div>
                {%- when 'advertorial_footer' -%}
                  {%- comment -%} Skip advertorial footer as it's rendered at the bottom {%- endcomment -%}
                {%- when 'listicle_item' -%}
                  <div class="listicle-item listicle-item-{{ block.id }}{% if block.settings.enable_container %} has-container{% endif %}" {{ block.shopify_attributes }}>
                    {%- if block.settings.image != blank -%}
                      <div class="listicle-item-image">
                        <img class="item-image" 
                             src="{{ block.settings.image | image_url: width: 800 }}" 
                             srcset="{{ block.settings.image | image_url: width: 300 }} 300w,
                                     {{ block.settings.image | image_url: width: 400 }} 400w,
                                     {{ block.settings.image | image_url: width: 600 }} 600w,
                                     {{ block.settings.image | image_url: width: 800 }} 800w,
                                     {{ block.settings.image | image_url: width: 1200 }} 1200w,
                                     {{ block.settings.image | image_url: width: 1600 }} 1600w"
                             sizes="(max-width: 480px) 100vw, (max-width: 768px) 90vw, (max-width: 1024px) 45vw, (max-width: 1440px) 300px, 400px"
                             alt="{{ block.settings.title | escape }}" 
                             width="300" 
                             height="300" 
                             loading="lazy"
                             decoding="async">
                      </div>
                    {%- endif -%}
                    <div class="listicle-item-content">
                      {%- if block.settings.title != blank -%}
                        <h3 class="item-title">{{ block.settings.title }}</h3>
                      {%- endif -%}
                      {%- if block.settings.content != blank -%}
                        <div class="item-content">{{ block.settings.content }}</div>
                      {%- endif -%}
                      {%- if block.settings.highlight_text != blank -%}
                        <div class="item-highlight">{{ block.settings.highlight_text }}</div>
                      {%- endif -%}
                    </div>
                  </div>
                  
                  <style>
                    .listicle-item-{{ block.id }} {
                      gap: {{ block.settings.item_gap }}px;
                    }
                    
