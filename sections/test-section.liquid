

<style>
    .section-{{ section.id }} {
      background-color: {% if section.settings.use_theme_colors %}{{ settings.global_section_background_color }}{% else %}{{ section.settings.section_background_color }}{% endif %};
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    
    .section-{{ section.id }} .container {
      max-width: 768px;
      margin: 0 auto;
      padding-left: {{ section.settings.container_padding_horizontal }}px;
      padding-right: {{ section.settings.container_padding_horizontal }}px;
    }
    
    .section-{{ section.id }} .listicle-header {
      margin-bottom: {{ section.settings.header_margin_bottom }}px;
    }
    
    .section-{{ section.id }} .listicle-title {
      font-size: {{ section.settings.title_size }}px;
      font-weight: {{ section.settings.title_font_weight }};
      line-height: {{ section.settings.title_line_height }};
      letter-spacing: var(--letter-spacing-heading);
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.title_color }}{% endif %};
      text-align: {{ section.settings.title_alignment }};
      margin: {{ section.settings.title_margin_top }}px 0 {{ section.settings.title_margin_bottom }}px 0;
    }
    
    .section-{{ section.id }} .author-info {
      display: flex;
      align-items: center;
      gap: {{ section.settings.author_gap }}px;
      margin-bottom: {{ section.settings.author_margin_bottom }}px;
      justify-content: {{ section.settings.author_alignment }};
    }
    
    .section-{{ section.id }} .author-avatar {
      width: {{ section.settings.avatar_size }}px;
      height: {{ section.settings.avatar_size }}px;
      border-radius: 50%;
      object-fit: cover;
      flex-shrink: 0;
    }
    
    .section-{{ section.id }} .author-details {
      display: flex;
      flex-direction: column;
      gap: 2px;
    }
    
    .section-{{ section.id }} .author-name {
      font-size: {{ section.settings.author_name_size }}px;
      font-weight: {% if section.settings.author_name_force_bold %}700 !important{% else %}{{ section.settings.author_name_font_weight }} !important{% endif %};
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color }}{% else %}{{ section.settings.author_name_color }}{% endif %};
      letter-spacing: var(--letter-spacing-body);
      margin: 0;
    }
    
    .section-{{ section.id }} .author-date {
      font-size: {{ section.settings.author_date_size }}px;
      font-weight: {{ section.settings.author_date_font_weight }};
      color: {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_modify: 'alpha', 0.7 }}{% else %}{{ section.settings.author_date_color }}{% endif %};
      letter-spacing: var(--letter-spacing-body);
      margin: 0;
    }
    
    .section-{{ section.id }} .summary-section {
      padding-bottom: {{ section.settings.summary_padding_bottom }}px;
      border-bottom: 1px solid {% if section.settings.use_theme_colors %}{{ settings.global_section_text_color | color_modify: 'alpha', 0.2 }}{% else %}{{ section.settings.divider_color }}{% endif %};
    }
    
    .section-{{ section.id }} .summary-text {
      font-size: 16px;
      font-weight: 400;
      line-height: 1.6;
      color: #333333;
      letter-spacing: var(--letter-spacing-body);
      margin: 0;
    }
    
    .section-{{ section.id }} .summary-text a {
      color: #007BFF;
      text-decoration: underline;
      font-weight: 600;
    }
    
    .section-{{ section.id }} .summary-text a:hover {
      color: #0056B3;
      text-decoration: none;
    }
    
    .section-{{ section.id }} .listicle-content {
      display: flex;
      flex-direction: column;
      gap: {{ section.settings.content_gap }}px;
    }
    
    .section-{{ section.id }} .listicle-item {
      display: flex;
      align-items: stretch;
      justify-content: space-between;
      gap: 20px;
      margin-top: {{ section.settings.item_margin_top }}px;
      margin-bottom: {{ section.settings.item_margin_bottom }}px;
    }
    
    .section-{{ section.id }} .listicle-item-image {
      flex: 0 0 50%;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    
    .section-{{ section.id }} .listicle-item-content {
      flex: 0 0 50%;
      min-width: 0;
    }
    
    
    
    .section-{{ section.id }} .item-title {
      font-weight: 700 !important;
      letter-spacing: {% if section.settings.item_title_letter_spacing == 'heading' %}var(--letter-spacing-heading){% else %}var(--letter-spacing-body){% endif %};
      margin: 0;
    }
    
    /* Bold text styling for rich text content */
    .section-{{ section.id }} strong,
    .section-{{ section.id }} b {
      font-weight: 700 !important;
    }
    
    .section-{{ section.id }} .item-content {
      letter-spacing: var(--letter-spacing-body);
      margin: 0;
    }
    
    .section-{{ section.id }} .item-highlight {
      letter-spacing: var(--letter-spacing-body);
      display: inline-block;
    }
    
    .section-{{ section.id }} .item-image {
      width: 100%;
      max-width: 300px;
      aspect-ratio: 1;
      object-fit: cover;
    }
    
    @media screen and (max-width: {{ section.settings.mobile_breakpoint }}px) {
      .section-{{ section.id }} .container {
        padding-left: {{ section.settings.mobile_container_padding }}px;
        padding-right: {{ section.settings.mobile_container_padding }}px;
      }
      
      .section-{{ section.id }} .listicle-title {
        font-size: {{ section.settings.mobile_title_size }}px;
      }
      
      .section-{{ section.id }} .author-name {
        font-size: {{ section.settings.mobile_author_name_size }}px;
      }
      
      .section-{{ section.id }} .author-date {
        font-size: {{ section.settings.mobile_author_date_size }}px;
      }
      
    
      
      .section-{{ section.id }} .author-info {
        justify-content: flex-start;
      }
      
      .section-{{ section.id }} .listicle-item {
        flex-direction: column;
        align-items: stretch;
        gap: 15px;
      }
      
      .section-{{ section.id }} .listicle-item-image {
        flex: none;
        justify-content: flex-start;
        width: 100%;
      }
      
      .section-{{ section.id }} .item-image {
        width: 100%;
        max-width: none;
        aspect-ratio: auto;
      }
      
      .section-{{ section.id }} .listicle-item-content {
        flex: none;
        display: contents;
      }
      
      .section-{{ section.id }} .item-title {
        order: 1;
      }
      
      .section-{{ section.id }} .listicle-item-image {
        order: 2;
      }
      
      .section-{{ section.id }} .item-content {
        order: 3;
      }
      
      .section-{{ section.id }} .item-highlight {
        order: 4;
      }
    }
    
    /* Countdown Header Styles */
    .section-{{ section.id }} .countdown-header {
      width: 100%;
      margin: 0;
      padding: 0;
    }
    
    .countdown-banner-{{ section.id }} {
      background: var(--countdown-bg-color) !important;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: var(--countdown-gap);
      padding: var(--countdown-padding-v) var(--countdown-padding-h);
      font-weight: 700 !important;
      font-family: Arial, Helvetica, sans-serif;
      letter-spacing: var(--letter-spacing-body);
    }
    
    .countdown-banner-{{ section.id }} .countdown-banner-text {
      display: flex;
      flex-direction: column;
      line-height: 1.1;
      text-align: center;
      gap: 4px;
    }
    
    div.countdown-banner-{{ section.id }} .countdown-banner-text .countdown-banner-title {
      font-size: var(--countdown-title-size) !important;
      font-weight: var(--font-weight-bold) !important;
      color: var(--countdown-title-color) !important;
      letter-spacing: var(--letter-spacing-body);
    }
    
    div.countdown-banner-{{ section.id }} .countdown-banner-text .countdown-banner-subtitle {
      font-size: var(--countdown-subtitle-size) !important;
      font-weight: var(--font-weight-regular) !important;
      opacity: 0.95;
      color: var(--countdown-subtitle-color) !important;
      letter-spacing: var(--letter-spacing-body);
    }
    
    .countdown-banner-{{ section.id }} .countdown-timer {
      background: var(--countdown-timer-bg) !important;
      border-radius: var(--countdown-timer-radius);
      padding: var(--countdown-timer-padding-v) var(--countdown-timer-padding-h);
      display: flex;
      align-items: center;
      gap: 0px;
    }
    
    .countdown-banner-{{ section.id }} .countdown-timer-unit {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-width: var(--countdown-unit-width);
    }
    
    .countdown-banner-{{ section.id }} .countdown-timer-value {
      font-size: var(--countdown-value-size) !important;
      line-height: 1;
      font-weight: var(--font-weight-semibold) !important;
      color: var(--countdown-value-color) !important;
      letter-spacing: var(--letter-spacing-body);
    }
    
    .countdown-banner-{{ section.id }} .countdown-timer-label {
      font-size: var(--countdown-label-size) !important;
      line-height: 1.1;
      font-weight: 700 !important;
      opacity: 0.9;
      margin-top: 3px;
      color: var(--countdown-label-color) !important;
      letter-spacing: var(--letter-spacing-body);
    }
    
    .countdown-banner-{{ section.id }} .countdown-timer-separator {
      font-size: var(--countdown-value-size) !important;
      font-weight: 800 !important;
      line-height: 1;
      color: var(--countdown-separator-color) !important;
      letter-spacing: var(--letter-spacing-body);
    }
    
    @media (max-width: 768px) {
      .countdown-banner-{{ section.id }} {
        gap: var(--countdown-mobile-gap);
        padding: var(--countdown-mobile-padding-v) var(--countdown-mobile-padding-h);
      }
      
      div.countdown-banner-{{ section.id }} .countdown-banner-text .countdown-banner-title {
        font-size: var(--countdown-mobile-title-size) !important;
      }
      
      div.countdown-banner-{{ section.id }} .countdown-banner-text .countdown-banner-subtitle {
        font-size: var(--countdown-mobile-subtitle-size) !important;
      }
      
      .countdown-banner-{{ section.id }} .countdown-timer {
        gap: 0px;
        padding: var(--countdown-mobile-timer-padding-v) var(--countdown-mobile-timer-padding-h);
      }
      
      .countdown-banner-{{ section.id }} .countdown-timer-unit {
        min-width: var(--countdown-mobile-unit-width);
      }
      
      .countdown-banner-{{ section.id }} .countdown-timer-value {
        font-size: var(--countdown-mobile-value-size) !important;
      }
      
      .countdown-banner-{{ section.id }} .countdown-timer-label {
        font-size: var(--countdown-mobile-label-size) !important;
      }
      
      .countdown-banner-{{ section.id }} .countdown-timer-separator {
        font-size: var(--countdown-mobile-value-size) !important;
      }
    }
    </style>
    
    <section class="section-{{ section.id }}">
      {%- comment -%} Render countdown banner first if it exists {%- endcomment -%}
      {%- for block in section.blocks -%}
        {%- if block.type == 'countdown_banner' -%}
          <div class="countdown-header" {{ block.shopify_attributes }} style="
            --countdown-bg-color: {{ block.settings.background_color }};
            --countdown-gap: {{ block.settings.gap }}px;
            --countdown-padding-v: {{ block.settings.padding_vertical }}px;
            --countdown-padding-h: {{ block.settings.padding_horizontal }}px;
            --countdown-title-size: {{ block.settings.title_size }}px;
            --countdown-subtitle-size: {{ block.settings.subtitle_size }}px;
            --countdown-title-color: {{ block.settings.title_color }};
            --countdown-subtitle-color: {{ block.settings.subtitle_color }};
            --countdown-timer-bg: {{ block.settings.timer_background_color }};
            --countdown-timer-radius: {{ block.settings.timer_border_radius }}px;
            --countdown-timer-padding-v: {{ block.settings.timer_padding_vertical }}px;
            --countdown-timer-padding-h: {{ block.settings.timer_padding_horizontal }}px;
            --countdown-unit-width: {{ block.settings.unit_min_width }}px;
            --countdown-value-size: {{ block.settings.timer_value_size }}px;
            --countdown-label-size: {{ block.settings.timer_label_size }}px;
            --countdown-value-color: {{ block.settings.timer_value_color }};
            --countdown-label-color: {{ block.settings.timer_label_color }};
            --countdown-separator-color: {{ block.settings.timer_separator_color }};
            --countdown-mobile-gap: {{ block.settings.mobile_gap }}px;
            --countdown-mobile-padding-v: {{ block.settings.mobile_padding_vertical }}px;
            --countdown-mobile-padding-h: {{ block.settings.mobile_padding_horizontal }}px;
            --countdown-mobile-title-size: {{ block.settings.mobile_title_size }}px;
            --countdown-mobile-subtitle-size: {{ block.settings.mobile_subtitle_size }}px;
            --countdown-mobile-timer-padding-v: {{ block.settings.mobile_timer_padding_vertical }}px;
            --countdown-mobile-timer-padding-h: {{ block.settings.mobile_timer_padding_horizontal }}px;
            --countdown-mobile-unit-width: {{ block.settings.mobile_unit_min_width }}px;
            --countdown-mobile-value-size: {{ block.settings.mobile_timer_value_size }}px;
            --countdown-mobile-label-size: {{ block.settings.mobile_timer_label_size }}px;
          ">
            <div class="countdown-banner-{{ section.id }}">
              <div class="countdown-banner-text">
                <div class="countdown-banner-title">{{ block.settings.title }}</div>
                <div class="countdown-banner-subtitle">{{ block.settings.subtitle }}</div>
              </div>
    
              <div id="countdown-{{ block.id }}" class="countdown-timer" 
                   {% if block.settings.countdown_type == 'duration' %}
                     data-hours="{{ block.settings.countdown_hours }}" 
                     data-minutes="{{ block.settings.countdown_minutes }}" 
                     data-seconds="{{ block.settings.countdown_seconds }}"
                   {% else %}
                     data-deadline="{{ block.settings.countdown_deadline }}"
                   {% endif %}>
                <div class="countdown-timer-unit">
                  <div class="countdown-timer-value" id="hh-{{ block.id }}">{{ block.settings.countdown_hours | default: 0 | prepend: '0' | slice: -2, 2 }}</div>
                  <div class="countdown-timer-label">{{ block.settings.hours_label }}</div>
                </div>
                <div class="countdown-timer-separator">:</div>
                <div class="countdown-timer-unit">
                  <div class="countdown-timer-value" id="mm-{{ block.id }}">{{ block.settings.countdown_minutes | default: 0 | prepend: '0' | slice: -2, 2 }}</div>
                  <div class="countdown-timer-label">{{ block.settings.minutes_label }}</div>
                </div>
                <div class="countdown-timer-separator">:</div>
                <div class="countdown-timer-unit">
                  <div class="countdown-timer-value" id="ss-{{ block.id }}">{{ block.settings.countdown_seconds | default: 0 | prepend: '0' | slice: -2, 2 }}</div>
                  <div class="countdown-timer-label">{{ block.settings.seconds_label }}</div>
                </div>
              </div>
            </div>
    
            <script>
            (function(){
              const el = document.getElementById('countdown-{{ block.id }}');
              const hhEl = document.getElementById('hh-{{ block.id }}');
              const mmEl = document.getElementById('mm-{{ block.id }}');
              const ssEl = document.getElementById('ss-{{ block.id }}');
    
              // If data-deadline is present, use that exact moment; otherwise start from given H/M/S duration.
              const deadlineAttr = el.getAttribute('data-deadline');
              let endTime;
    
              if (deadlineAttr) {
                // Count down to a specific timestamp
                endTime = new Date(deadlineAttr).getTime();
              } else {
                // Count down from a duration (H/M/S)
                const H = parseInt(el.getAttribute('data-hours')||'0',10);
                const M = parseInt(el.getAttribute('data-minutes')||'0',10);
                const S = parseInt(el.getAttribute('data-seconds')||'0',10);
                const durationMs = ((H*60 + M)*60 + S)*1000;
                endTime = Date.now() + durationMs;
              }
    
              function pad(n){return String(n).padStart(2,'0');}
    
              function tick(){
                const now = Date.now();
                let diff = Math.max(0, endTime - now);
    
                const totalSeconds = Math.floor(diff/1000);
                const hours = Math.floor(totalSeconds/3600);
                const minutes = Math.floor((totalSeconds%3600)/60);
                const seconds = totalSeconds%60;
    
                hhEl.textContent = pad(hours);
                mmEl.textContent = pad(minutes);
                ssEl.textContent = pad(seconds);
    
                if (diff <= 0) {
                  clearInterval(timerId);
                }
              }
    
              tick();
              const timerId = setInterval(tick, 1000);
            })();
            </script>
          </div>
          {%- break -%}
        {%- endif -%}
      {%- endfor -%}
      
      <div class="container">
        
        {%- if section.blocks.size > 0 -%}
          <div class="listicle-content">
            {%- for block in section.blocks -%}
