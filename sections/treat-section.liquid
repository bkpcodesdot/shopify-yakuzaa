{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
.ai-treatment-warning-{{ ai_gen_id }} {
  background-color: {{ section.settings.background_color }};
  padding: 40px 20px;
  max-width: 1200px;
  margin: 0 auto;
}

.ai-treatment-warning__title-{{ ai_gen_id }} {
  font-size: {{ section.settings.heading_size }}px;
  font-weight: bold;
  margin-bottom: 30px;
  color: {{ section.settings.text_color }};
  line-height: 1.2;
}

.ai-treatment-warning__title-{{ ai_gen_id }} span {
  color: {{ section.settings.highlight_color }};
}

.ai-treatment-warning__intro-{{ ai_gen_id }} {
  font-size: {{ section.settings.text_size }}px;
  color: {{ section.settings.text_color }};
  text-align: left;
  margin-bottom: 40px;
  line-height: 1.6;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.ai-treatment-warning__media-{{ ai_gen_id }} {
  margin-bottom: 40px;
  text-align: center;
}

.ai-treatment-warning__media video {
  width: 100%;
  max-width: 600px;
  height: auto;
  border-radius: 8px;
  background: #000;
}

.ai-treatment-warning__points-{{ ai_gen_id }} {
  margin-bottom: 40px;
}

.ai-treatment-warning__point-{{ ai_gen_id }} {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  gap: 15px;
}

.ai-treatment-warning__icon-{{ ai_gen_id }} {
  width: {{ section.settings.icon_size }}px;
  height: {{ section.settings.icon_size }}px;
  background-color: {{ section.settings.icon_color }};
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.ai-treatment-warning__icon-{{ ai_gen_id }} svg {
  width: 60%;
  height: 60%;
  fill: white;
}

.ai-treatment-warning__point-content-{{ ai_gen_id }} {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8px;
}

.ai-treatment-warning__point-title-{{ ai_gen_id }} {
  font-weight: bold;
  font-size: {{ section.settings.point_title_size }}px;
  color: {{ section.settings.text_color }};
  white-space: nowrap;
}

.ai-treatment-warning__point-separator-{{ ai_gen_id }} {
  color: {{ section.settings.text_color }};
  font-weight: bold;
}

.ai-treatment-warning__point-description-{{ ai_gen_id }} {
  font-size: {{ section.settings.point_text_size }}px;
  color: {{ section.settings.text_color }};
  line-height: 1.4;
}

.ai-treatment-warning__closing-{{ ai_gen_id }} {
  font-size: {{ section.settings.text_size }}px;
  color: {{ section.settings.text_color }};
  text-align: left;
  margin-bottom: 40px;
  line-height: 1.6;
  max-width: 726px;
  margin-left: auto;
  margin-right: auto;
}

.ai-treatment-warning__cta-{{ ai_gen_id }} {
  text-align: center;
}

.ai-treatment-warning__button-{{ ai_gen_id }} {
  display: block;
  background-color: {{ section.settings.button_color }};
  color: {{ section.settings.button_text_color }};
  padding: 16px 32px;
  border-radius: {{ section.settings.button_border_radius }}px;
  text-decoration: none;
  font-weight: bold;
  font-size: {{ section.settings.button_text_size }}px;
  transition: background-color 0.3s ease;
  border: none;
  cursor: pointer;
  width: 100%;
}

.ai-treatment-warning__button-{{ ai_gen_id }}:hover {
  background-color: {{ section.settings.button_hover_color }};
  color:#EE882F;
  border:2px solid #EE882F;
}

@media screen and (max-width: 768px) {
  .ai-treatment-warning-{{ ai_gen_id }} {
    padding: 30px 15px;
  }

  .ai-treatment-warning__title-{{ ai_gen_id }} {
    font-size: {{ section.settings.heading_size | times: 0.8 }}px;
  }

  .ai-treatment-warning__point-{{ ai_gen_id }} {
    gap: 12px;
    align-items: flex-start;
  }

  .ai-treatment-warning__point-content-{{ ai_gen_id }} {
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
  }

  .ai-treatment-warning__point-title-{{ ai_gen_id }} {
    white-space: normal;
  }

  .ai-treatment-warning__point-separator-{{ ai_gen_id }} {
    display: none;
  }
}
{% endstyle %}

<section class="ai-treatment-warning-{{ ai_gen_id }}">
  {% if section.settings.heading != blank %}
    <h2 class="ai-treatment-warning__title-{{ ai_gen_id }}">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  {% if section.settings.intro_text != blank %}
    <div class="ai-treatment-warning__intro-{{ ai_gen_id }}">
      {{ section.settings.intro_text }}
    </div>
  {% endif %}

  {% if section.settings.video_file %}
    <div class="ai-treatment-warning__media-{{ ai_gen_id }}">
      <video autoplay muted loop playsinline>
        <source src="{{ section.settings.video_file.sources[0].url }}" type="{{ section.settings.video_file.sources[0].mime_type }}">
        {% if section.settings.video_file.sources[1] %}
        <source src="{{ section.settings.video_file.sources[1].url }}" type="{{ section.settings.video_file.sources[1].mime_type }}">
        {% endif %}
        Your browser does not support the video tag.
      </video>
    </div>
  {% elsif section.settings.media_image %}
    <div class="ai-treatment-warning__media-{{ ai_gen_id }}">
      <img src="{{ section.settings.media_image | image_url: width: 1200 }}" alt="{{ section.settings.media_image.alt | escape }}">
    </div>
  {% endif %}

  <div class="ai-treatment-warning__points-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% assign point_title_key = 'point_' | append: i | append: '_title' %}
      {% assign point_description_key = 'point_' | append: i | append: '_description' %}
      {% assign point_title = section.settings[point_title_key] %}
      {% assign point_description = section.settings[point_description_key] %}
      {% if point_title != blank %}
        <div class="ai-treatment-warning__point-{{ ai_gen_id }}">
          <div class="ai-treatment-warning__icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
          </div>
          <div class="ai-treatment-warning__point-content-{{ ai_gen_id }}">
            <div class="ai-treatment-warning__point-title-{{ ai_gen_id }}">{{ point_title }}</div>
            {% if point_description != blank %}
              <span class="ai-treatment-warning__point-separator-{{ ai_gen_id }}">â€“</span>
              <div class="ai-treatment-warning__point-description-{{ ai_gen_id }}">{{ point_description }}</div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if section.settings.closing_text != blank %}
    <div class="ai-treatment-warning__closing-{{ ai_gen_id }}">
      {{ section.settings.closing_text }}
    </div>
  {% endif %}

  {% if section.settings.button_text != blank %}
    <div class="ai-treatment-warning__cta-{{ ai_gen_id }}">
      <a href="{{ section.settings.button_link }}" class="ai-treatment-warning__button-{{ ai_gen_id }}">
        {{ section.settings.button_text }}
      </a>
    </div>
  {% endif %}
</section>

