<style>
/* Section wrapper */
.ai-comparison-table-{{ section.id }} {
  background-color: {{ section.settings.section_background_color }};
  padding: {{ section.settings.section_padding }}px;
  margin: 0 auto;
  max-width: 100%;
}

/* Container */
.ai-comparison-table__container-{{ section.id }} {
  max-width: 726px;
  margin: 0 auto;
}

/* Heading */
.ai-comparison-table__heading-{{ section.id }} {
  font-size: {{ section.settings.heading_size }}px;
  color: {{ section.settings.heading_color }};
  margin-bottom: 16px;
}

/* Subheading */
.ai-comparison-table__subheading-{{ section.id }} {
  font-size: {{ section.settings.subheading_size }}px;
  color: {{ section.settings.subheading_color }};
  margin-bottom: 24px;
}

/* Intro */
.ai-comparison-table__intro-{{ section.id }} {
  font-size: {{ section.settings.intro_size }}px;
  color: {{ section.settings.intro_color }};
  margin-bottom: 40px;
}

/* Table */
.ai-comparison-table__table-wrapper-{{ section.id }} {
  overflow-x: auto;
  margin-bottom: 40px;
  border: 1px solid {{ section.settings.table_border_color }};
  border-radius: {{ section.settings.table_border_radius }}px;
}

.ai-comparison-table__table-{{ section.id }} {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
}

.ai-comparison-table__row-{{ section.id }} {
  display: grid;
  grid-template-columns: 2.5fr 4fr 2.5fr;
  border-bottom: 1px solid {{ section.settings.table_border_color }};
}

.ai-comparison-table__row-{{ section.id }}:nth-child(even) {
  {% if section.settings.enable_alternating_rows %}
  background-color: {{ section.settings.table_row_alt_background }};
  {% endif %}
}

.ai-comparison-table__cell-{{ section.id }} {
  padding: 16px;
  color: {{ section.settings.table_text_color }};
}

.ai-comparison-table__cell--product-{{ section.id }} {
  background-color: {{ section.settings.product_column_background }};
}

.ai-comparison-table__cell--feature-{{ section.id }} {
  background-color: {{ section.settings.feature_column_background }};
}

.ai-comparison-table__cell--competitor-{{ section.id }} {
  background-color: {{ section.settings.competitor_column_background }};
}

/* Buttons */
.ai-comparison-table__button-{{ section.id }} {
  display: inline-block;
  padding: {{ section.settings.button_padding }}px;
  background-color: {{ section.settings.button_background_color }};
  color: {{ section.settings.button_text_color }};
  border-radius: {{ section.settings.button_border_radius }}px;
  font-size: {{ section.settings.button_font_size }}px;
  text-decoration: none;
}
.ai-comparison-table__button-{{ section.id }}:hover {
  background-color: {{ section.settings.button_hover_color }};
  color: {{ section.settings.button_hover_text_color }};
}
</style>

<div class="ai-comparison-table-{{ section.id }}">
  <div class="ai-comparison-table__container-{{ section.id }}">
    {% if section.settings.heading_text != blank %}
      <h2 class="ai-comparison-table__heading-{{ section.id }}">{{ section.settings.heading_text }}</h2>
    {% endif %}
    {% if section.settings.subheading_text != blank %}
      <h3 class="ai-comparison-table__subheading-{{ section.id }}">{{ section.settings.subheading_text }}</h3>
    {% endif %}
    {% if section.settings.intro_text != blank %}
      <div class="ai-comparison-table__intro-{{ section.id }}">{{ section.settings.intro_text }}</div>
    {% endif %}

    <div class="ai-comparison-table__table-wrapper-{{ section.id }}">
      <table class="ai-comparison-table__table-{{ section.id }}">
        <tbody>
          {% for block in section.blocks %}
            <tr class="ai-comparison-table__row-{{ section.id }}">
              <td class="ai-comparison-table__cell--product-{{ section.id }}">
                {% if block.settings.product_image %}
                  <img src="{{ block.settings.product_image | image_url: width: 65 }}" alt="{{ block.settings.product_image.alt }}">
                {% else %}
                  <div style="width:65px; height:65px; background:#f4f4f4;"></div>
                {% endif %}
              </td>
              <td class="ai-comparison-table__cell--feature-{{ section.id }}">
                {{ block.settings.feature_1 }}
              </td>
              <td class="ai-comparison-table__cell--competitor-{{ section.id }}">
                {% if block.settings.competitor_1 == 'check' %}✅{% else %}❌{% endif %}
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="ai-comparison-table__button-{{ section.id }}">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>


