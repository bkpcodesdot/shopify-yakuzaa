.ai-advertorial-section {
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.ai-advertorial-content {
  padding: 40px 20px;
  background-color: {{ section.settings.content_bg_color }};
}

.ai-advertorial-heading {
  font-size: {{ section.settings.heading_size }}px;
  font-weight: 700;
  line-height: 1.2;
  margin: 0 0 20px;
  color: {{ section.settings.heading_color }};
}

.ai-advertorial-heading-highlight {
  color: {{ section.settings.heading_highlight_color }};
}

.ai-advertorial-subtitle {
  font-size: {{ section.settings.subtitle_size }}px;
  color: {{ section.settings.subtitle_color }};
  font-weight: 500;
}

.ai-advertorial-hero-image,
.ai-advertorial-second-image {
  margin: 20px 0;
  text-align: center;
}

.ai-advertorial-hero-image img,
.ai-advertorial-second-image img {
    max-width: 100%;
    height: auto;
    aspect-ratio: 192 / 102;
    object-fit: cover;
    object-position: bottom;
}

.ai-advertorial-text-block {
  margin: 0 0 30px;
}

.ai-advertorial-text-block p {
  font-size: {{ section.settings.body_text_size }}px;
  line-height: 1.6;
  font-weight:300;
  color: {{ section.settings.body_text_color }};
}

.ai-advertorial-text-block p:last-child {
  margin-bottom: 0;
}

.ai-advertorial-cta-section {
  margin: 50px 0 0;
  text-align: center;
}

.ai-advertorial-cta-btn {
  display: inline-block;
  border: 2px solid {{ section.settings.cta_bg_color }};
  background-color: {{ section.settings.cta_bg_color }};
  color: {{ section.settings.cta_text_color }};
  padding: 18px 40px;
  border-radius: {{ section.settings.cta_border_radius }}px;
  font-size: {{ section.settings.cta_font_size }}px;
  font-weight: 700;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 1px;
  width: 100%;
  transition: all 0.3s ease;
}

.ai-advertorial-cta-btn:hover {
  background-color: #fff;
  color: {{ section.settings.cta_bg_color }};
}

@media screen and (max-width: 768px) {
  .ai-advertorial-content {
    padding: 30px 15px;
  }

  .ai-advertorial-heading {
    font-size: calc({{ section.settings.heading_size }}px * 0.8);
  }

  .ai-advertorial-subtitle {
    font-size: calc({{ section.settings.subtitle_size }}px * 0.9);
  }

  .ai-advertorial-top-bar {
    flex-direction: column;
    gap: 15px;
  }

  .ai-advertorial-cta-btn {
    padding: 16px 30px;
    font-size: calc({{ section.settings.cta_font_size }}px * 0.9);
  }
}

@media screen and (max-width: 480px) {
  .ai-advertorial-content {
    padding: 20px 10px;
  }

  .ai-advertorial-heading {
    font-size: calc({{ section.settings.heading_size }}px * 0.7);
  }

  .ai-advertorial-subtitle {
    font-size: calc({{ section.settings.subtitle_size }}px * 0.8);
  }
}
{% endstyle %}
