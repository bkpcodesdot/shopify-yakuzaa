{% style %}
.ai-advertorial-section {
  width: 100%;
  max-width: 800px;
  margin: 0 auto;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.ai-advertorial-content {
  padding: 40px 20px;
}

.ai-advertorial-heading {
  font-weight: 700;
  line-height: 1.2;
  margin: 0 0 20px;
}

.ai-advertorial-heading-highlight { }

.ai-advertorial-subtitle {
  font-weight: 500;
  margin: 0 0 12px;
}

.ai-advertorial-hero-image,
.ai-advertorial-second-image {
  margin: 20px 0;
  text-align: center;
}

.ai-advertorial-hero-image img,
.ai-advertorial-second-image img {
  max-width: 100%;
  height: auto;
  aspect-ratio: 192 / 102;
  object-fit: cover;
  object-position: bottom;
  display:block;
  margin: 0 auto;
}

.ai-advertorial-text-block {
  margin: 0 0 30px;
}

.ai-advertorial-text-block p {
  line-height: 1.6;
  font-weight: 300;
  margin-bottom: 0;
}

.ai-advertorial-cta-section {
  margin: 50px 0 0;
  text-align: center;
}

.ai-advertorial-cta-btn {
  display: inline-block;
  border: 2px solid transparent;
  padding: 18px 40px;
  border-radius: 8px;
  font-weight: 700;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 1px;
  width: 100%;
  transition: all 0.3s ease;
}

@media screen and (max-width: 768px) {
  .ai-advertorial-content {
    padding: 30px 15px;
  }
  .ai-advertorial-cta-btn {
    padding: 16px 30px;
  }
}

@media screen and (max-width: 480px) {
  .ai-advertorial-content {
    padding: 20px 10px;
  }
}
{% endstyle %}

<div class="ai-advertorial-section">
  <div class="ai-advertorial-content" style="background-color: {{ section.settings.content_bg_color }};">

    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          {% render 'advertorial-heading', block: block %}
        {% when 'subtitle' %}
          {% render 'advertorial-subtitle', block: block %}
        {% when 'image' %}
          {% render 'advertorial-image', block: block %}
        {% when 'text' %}
          {% render 'advertorial-text', block: block %}
        {% when 'cta' %}
          {% render 'advertorial-cta', block: block %}
      {% endcase %}
    {% endfor %}

  </div>
</div>

{% schema %}
{
  "name": "Advertorial new",
  "settings": [
    {
      "type": "color",
      "id": "content_bg_color",
      "label": "Content background color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading text", "default": "Why Most People Don't Know They're Infected" },
        { "type": "text", "id": "highlight_text", "label": "Text to highlight", "default": "Don't Know" },
        { "type": "range", "id": "heading_size", "label": "Font size (px)", "min": 24, "max": 60, "step": 2, "unit": "px", "default": 36 },
        { "type": "color", "id": "heading_color", "label": "Heading color", "default": "#333333" },
        { "type": "color", "id": "heading_highlight_color", "label": "Highlight color", "default": "#FF6B35" }
      ]
    },
    {
      "type": "subtitle",
      "name": "Subtitle",
      "settings": [
        { "type": "text", "id": "subtitle", "label": "Subtitle text", "default": "How gut invaders hide, survive, and manipulate your body" },
        { "type": "range", "id": "subtitle_size", "label": "Font size (px)", "min": 14, "max": 24, "step": 1, "unit": "px", "default": 18 },
        { "type": "color", "id": "subtitle_color", "label": "Color", "default": "#666666" }
      ]
    },
    {
  "type": "image",
  "name": "Image",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Image" },
    { "type": "text", "id": "image_alt", "label": "Image alt text", "default": "Image description" }
  ]
},
    {
      "type": "text",
      "name": "Text Block",
      "settings": [
        { "type": "richtext", "id": "content", "label": "Text content", "default": "<p>One of the biggest reasons <strong>parasites, fungi, and harmful microbes</strong> go untreated is because they're <em>incredibly good at hiding</em>.</p>" },
        { "type": "range", "id": "body_text_size", "label": "Font size (px)", "min": 14, "max": 20, "step": 1, "unit": "px", "default": 16 },
        { "type": "color", "id": "body_text_color", "label": "Text color", "default": "#444444" }
      ]
    },
    {
      "type": "cta",
      "name": "CTA Button",
      "settings": [
        { "type": "text", "id": "cta_text", "label": "Button text", "default": "TRY RISK-FREE" },
        { "type": "url", "id": "cta_link", "label": "Button link" },
        { "type": "range", "id": "cta_font_size", "label": "Font size (px)", "min": 14, "max": 24, "step": 1, "unit": "px", "default": 18 },
        { "type": "range", "id": "cta_border_radius", "label": "Border radius (px)", "min": 0, "max": 25, "step": 1, "unit": "px", "default": 8 },
        { "type": "color", "id": "cta_bg_color", "label": "Background color", "default": "#FF6B35" },
        { "type": "color", "id": "cta_text_color", "label": "Text color", "default": "#FFFFFF" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Advertorial new",
      "category": "Custom",
      "blocks": [
        { "type": "heading", "settings": { "heading": "Top Orthopedic Surgeon: This Is The Secret", "highlight_text": "Secret", "heading_size": 42, "heading_color": "#222222", "heading_highlight_color": "#FF6B35" } },
        { "type": "subtitle", "settings": { "subtitle": "If you struggle with knee pain...", "subtitle_size": 18, "subtitle_color": "#666666" } },
        { "type": "image", "settings": { "image": "" } },
        { "type": "text", "settings": { "content": "<p>Add your text content here. This block spans the full width of the content area.</p>", "body_text_size": 16, "body_text_color": "#444444" } },
        { "type": "cta", "settings": { "cta_text": "Click Here", "cta_link": "/", "cta_bg_color": "#00AEEF", "cta_text_color": "#ffffff" } }
      ]
    }
  ]
}
{% endschema %}
