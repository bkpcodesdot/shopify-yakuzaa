{% comment %} Customer Testimonials Section {% endcomment %}

<section class="ai-testimonials-{{ section.id }}">
  {% render 'customer-testimonials-content', section: section %}
</section>

<style>
  .ai-testimonials-{{ section.id }} {
    padding: 0px 20px;
    max-width: 726px;
    margin: 0 auto;
    background-color: {{ section.settings.section_background_color }};
  }
  .ai-testimonials-title-{{ section.id }} {
    font-size: 36px;
    font-weight: bold;
    color: #000;
    margin-bottom: 20px;
  }
  .ai-testimonials-description-{{ section.id }} {
    font-size: 16px;
    color: #666;
    margin-bottom: 30px;
  }
  .ai-testimonial-card-{{ section.id }} {
    background-color: #F8F9FA;
    border: 1px solid #016401;
    border-radius: 5px;
    padding: 15px;
    margin-bottom: 20px;
  }
  .ai-testimonial-quote-{{ section.id }} {
    font-size: 18px;
    margin-bottom: 12px;
  }
  .ai-testimonial-footer-{{ section.id }} {
    display: flex;
    gap: 12px;
    align-items: center;
  }
  .ai-testimonial-icon-{{ section.id }} img {
    width: 40px;
    height: 40px;
  }
  .ai-testimonial-name-{{ section.id }} {
    font-weight: bold;
    font-size: 14px;
    color: #000;
  }
  .ai-testimonial-verified-{{ section.id }} {
    font-size: 12px;
    color: #666;
  }
  .ai-testimonials-cta-{{ section.id }} {
    text-align: center;
    margin-top: 40px;
  }
  .ai-testimonials-button-{{ section.id }} {
    background-color: {{ block.settings.button_background_color | default: '#EE882F' }};
    color: white;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    display:block;
    text-align: center;
    font-size: {{ block.settings.button_font_size | default: 16 }}px;
}

  .ai-testimonials-button-{{ section.id }}:hover {
    background-color:{{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }
</style>

{% schema %}
{
  "name": "Customer Testimonials",
  "settings": [
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "title_font_size",
      "label": "Title Font Size (px)",
      "default": 36

    },
    {
      "type": "color",
      "id": "description_color",
      "label": "Description Color",
      "default": "#666666"
    },
    {
      "type": "number",
      "id": "description_font_size",
      "label": "Description Font Size (px)",
      "default": 16
    },
    {
      "type": "color",
      "id": "card_background_color",
      "label": "Testimonial Card Background",
      "default": "#F8F9FA"
    },
    {
      "type": "color",
      "id": "card_border_color",
      "label": "Testimonial Card Border Color",
      "default": "#016401"
    },
    {
      "type": "number",
      "id": "card_border_radius",
      "label": "Card Border Radius (px)",
      "default": 5
    },
    {
      "type": "color",
      "id": "quote_color",
      "label": "Quote Text Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "quote_font_size",
      "label": "Quote Font Size (px)",
      "default": 18
    },
    {
      "type": "color",
      "id": "name_color",
      "label": "Customer Name Color",
      "default": "#000000"
    },
    {
      "type": "number",
      "id": "name_font_size",
      "label": "Customer Name Font Size (px)",
      "default": 14
    },
    {
      "type": "color",
      "id": "verified_color",
      "label": "Verified Label Color",
      "default": "#666666"
    },
    {
      "type": "number",
      "id": "verified_font_size",
      "label": "Verified Label Font Size (px)",
      "default": 12
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button Background Color",
      "default": "#FF6B35"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "number",
      "id": "button_font_size",
      "label": "Button Font Size (px)",
      "default": 16
    },
    {
      "type": "number",
      "id": "button_border_radius",
      "label": "Button Border Radius (px)",
      "default": 8
    },
    {
      "type": "color",
      "id": "button_hover_background_color",
      "label": "Button Hover Background Color",
      "default": "#E55A2B"
    },
    {
      "type": "color",
      "id": "button_hover_text_color",
      "label": "Button Hover Text Color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Title",
          "default": "<p>What Customers Are Saying</p>"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Real customers. Real feedback. Real results.</p>"
        }
      ]
    },
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Name"
        },
        {
          "type": "text",
          "id": "age",
          "label": "Age"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Customer Icon"
        },
        {
          "type": "text",
          "id": "verified_label",
          "label": "Verified Label",
          "default": "Verified Customer"
        }
      ]
    },
    {
      "type": "cta",
      "name": "CTA Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "TRY NOW"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Customer Testimonials Preset",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "description"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "cta"
        }
      ]
    }
  ]
}

{% endschema %}
