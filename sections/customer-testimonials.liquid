{% comment %} Customer Testimonials Section {% endcomment %}

<section class="ai-testimonials-{{ section.id }}">
  {% render 'customer-testimonials-content', section: section %}
</section>

<style>
  .ai-testimonials-{{ section.id }} {
    padding: 0px 20px;
    max-width: 726px;
    margin: 0 auto;
    background-color: {{ section.settings.section_background_color }};
  }
  .ai-testimonials-title-{{ section.id }} {
    font-size: 36px;
    font-weight: bold;
    color: #000;
    margin-bottom: 20px;
  }
  .ai-testimonials-description-{{ section.id }} {
    font-size: 16px;
    color: #666;
    margin-bottom: 30px;
  }
  .ai-testimonial-card-{{ section.id }} {
    background-color: #F8F9FA;
    border: 1px solid #016401;
    border-radius: 5px;
    padding: 15px;
    margin-bottom: 20px;
  }
  .ai-testimonial-quote-{{ section.id }} {
    font-size: 18px;
    margin-bottom: 12px;
  }
  .ai-testimonial-footer-{{ section.id }} {
    display: flex;
    gap: 12px;
    align-items: center;
  }
  .ai-testimonial-icon-{{ section.id }} img {
    width: 40px;
    height: 40px;
  }
  .ai-testimonial-name-{{ section.id }} {
    font-weight: bold;
    font-size: 14px;
    color: #000;
  }
  .ai-testimonial-verified-{{ section.id }} {
    font-size: 12px;
    color: #666;
  }
  .ai-testimonials-cta-{{ section.id }} {
    text-align: center;
    margin-top: 40px;
  }
  .ai-testimonials-button-{{ section.id }} {
    background-color: #FF6B35;
    color: white;
    padding: 16px 32px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    display: inline-block;
  }
  .ai-testimonials-button-{{ section.id }}:hover {
    background-color: #E55A2B;
    color: #fff;
  }
</style>

{% schema %}
{
  "name": "Customer Testimonials",
  "settings": [
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Section Background",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Title",
          "default": "<p>What Customers Are Saying</p>"
        }
      ]
    },
    {
      "type": "description",
      "name": "Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Real customers. Real feedback. Real results.</p>"
        }
      ]
    },
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        { "type": "textarea", "id": "quote", "label": "Quote" },
        { "type": "text", "id": "name", "label": "Name" },
        { "type": "text", "id": "age", "label": "Age" },
        { "type": "image_picker", "id": "icon", "label": "Customer Icon" },
        { "type": "text", "id": "verified_label", "label": "Verified Label", "default": "Verified Customer" }
      ]
    },
    {
      "type": "cta",
      "name": "CTA Button",
      "settings": [
        { "type": "text", "id": "button_text", "label": "Button Text", "default": "TRY NOW" },
        { "type": "url", "id": "button_link", "label": "Button Link" }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Customer Testimonials Preset",
      "blocks": [
        { "type": "title" },
        { "type": "description" },
        { "type": "testimonial" },
        { "type": "testimonial" },
        { "type": "cta" }
      ]
    }
  ]
}
{% endschema %}
