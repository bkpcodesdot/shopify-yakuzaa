/* Header */
.ai-symptoms-header-{{ ai_gen_id }} {
  margin-bottom: 32px;
}
.ai-symptoms-title-{{ ai_gen_id }} {
  font-size: {{ section.settings.title_size }}px;
  color: {{ section.settings.title_color }};
  margin: 0 0 8px 0;
  font-weight: 700;
  line-height: 1.2;
  text-align: left;
}
.ai-symptoms-title-{{ ai_gen_id }} span {
  color: {{ section.settings.title_highlight_color | default: '#e26900' }};
}

/* Subtitle */
.ai-symptoms-subtitle-{{ ai_gen_id }} {
  font-size: {{ section.settings.subtitle_size }}px;
  color: {{ section.settings.subtitle_color }};
  margin: 0;
  text-align: left;
  font-weight: 400;
}

/* List */
.ai-symptoms-list-{{ ai_gen_id }} {
  display: flex;
  flex-direction: column;
  gap: 18px;
  margin: 30px 0 24px;
}

/* Box */
.ai-symptom-box-{{ ai_gen_id }} {
  border: 2px solid {{ section.settings.box_border_color }};
  border-radius: {{ section.settings.box_border_radius }}px;
  background: {{ section.settings.box_background }};
  padding: 20px;
  transition: transform 0.22s ease, box-shadow 0.22s ease;
  box-sizing: border-box;
}
.ai-symptom-box-{{ ai_gen_id }}:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.08);
}

/* Top row: number + title */
.ai-symptom-top-{{ ai_gen_id }} {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}
.ai-symptom-number-{{ ai_gen_id }} {
  font-size: {{ section.settings.number_size }}px;
  font-weight: 800;
  color: {{ section.settings.box_border_color }};
  flex-shrink: 0;
  line-height: 1;
}
.ai-symptom-title-{{ ai_gen_id }} {
  font-size: {{ section.settings.symptom_title_size }}px;
  font-weight: 700;
  color: {{ section.settings.symptom_title_color }};
  margin: 0;
  line-height: 1.25;
}

/* Divider */
.ai-symptom-divider-{{ ai_gen_id }} {
  height: 2px;
  background: {{ section.settings.box_border_color }};
  margin: 12px 0;
  width: 100%;
}

/* Description - two line clamp */
.ai-symptom-description-{{ ai_gen_id }} {
  font-size: {{ section.settings.description_size }}px;
  color: {{ section.settings.description_color }};
  margin: 0 0 12px 0;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Science row */
.ai-symptom-science-{{ ai_gen_id }} {
  display: flex;
  gap: 10px;
  align-items: center;
  font-size: {{ section.settings.science_text_size }}px;
  color: {{ section.settings.science_text_color }};
  font-style: normal;
}
.ai-symptom-science-icon-{{ ai_gen_id }} {
  width: {{ section.settings.science_icon_size }}px;
  height: {{ section.settings.science_icon_size }}px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ai-symptom-science-icon-{{ ai_gen_id }} img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

/* CTA */
.ai-symptoms-cta-{{ ai_gen_id }} {
  text-align: center;
  margin-top: 18px;
}
.ai-symptoms-button-{{ ai_gen_id }} {
  display: block;
  background: {{ section.settings.button_background }};
  color: {{ section.settings.button_text_color }};
  padding: {{ section.settings.button_padding }}px 28px;
  border-radius: {{ section.settings.button_border_radius }}px;
  text-decoration: none;
  font-size: {{ section.settings.button_text_size }}px;
  font-weight: 700;
  transition: background 0.18s ease, transform 0.18s ease;
  border: none;
}
.ai-symptoms-button-{{ ai_gen_id }}:hover {
  background: {{ section.settings.button_hover_background }};
 color:#ee882f;
