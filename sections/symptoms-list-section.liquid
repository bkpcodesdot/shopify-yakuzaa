<section class="ai-symptoms-section-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="ai-symptoms-header-{{ ai_gen_id }}">
    {% if section.settings.title_before != blank %}
      <h2 class="ai-symptoms-title-{{ ai_gen_id }}">
        {{ section.settings.title_before }}
        {% if section.settings.title_highlight != blank %}
          <span>{{ section.settings.title_highlight }}</span>
        {% endif %}
      </h2>
    {% endif %}
    {% if section.settings.section_subtitle != blank %}
      <p class="ai-symptoms-subtitle-{{ ai_gen_id }}">{{ section.settings.section_subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-symptoms-list-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% capture enabled_key %}symptom_{{ i }}_enabled{% endcapture %}
      {% capture title_key %}symptom_{{ i }}_title{% endcapture %}
      {% capture desc_key %}symptom_{{ i }}_description{% endcapture %}
      {% capture science_key %}symptom_{{ i }}_science_text{% endcapture %}
      {% capture icon_key %}symptom_{{ i }}_icon{% endcapture %}

      {% if section.settings[enabled_key] %}
        <article class="ai-symptom-box-{{ ai_gen_id }}" aria-labelledby="symptom-{{ ai_gen_id }}-{{ i }}">
          <div class="ai-symptom-top-{{ ai_gen_id }}">
            <div class="ai-symptom-number-{{ ai_gen_id }}">{{ i }}.</div>

            {% if section.settings[title_key] != blank %}
              <h3 id="symptom-{{ ai_gen_id }}-{{ i }}" class="ai-symptom-title-{{ ai_gen_id }}">{{ section.settings[title_key] }}</h3>
            {% endif %}
          </div>

          <div class="ai-symptom-divider-{{ ai_gen_id }}"></div>

          {% if section.settings[desc_key] != blank %}
            <p class="ai-symptom-description-{{ ai_gen_id }}">{{ section.settings[desc_key] }}</p>
          {% endif %}

          {% if section.settings[science_key] != blank %}
            <div class="ai-symptom-science-{{ ai_gen_id }}">
              <div class="ai-symptom-science-icon-{{ ai_gen_id }}">
                {% if section.settings[icon_key] != blank %}
                  <img src="{{ section.settings[icon_key] | image_url: width: 200 }}" alt="icon for {{ section.settings[title_key] }}">
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <div><strong>Science Says:</strong> <span style="font-style:italic; padding-left:6px;">{{ section.settings[science_key] }}</span></div>
            </div>
          {% endif %}
        </article>
      {% endif %}
    {% endfor %}
  </div>

  {% if section.settings.cta_text != blank %}
    <div class="ai-symptoms-cta-{{ ai_gen_id }}">
      {% if section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="ai-symptoms-button-{{ ai_gen_id }}">{{ section.settings.cta_text }}</a>
      {% else %}
        <span class="ai-symptoms-button-{{ ai_gen_id }}">{{ section.settings.cta_text }}</span>
      {% endif %}
    </div>
  {% endif %}
</section>

