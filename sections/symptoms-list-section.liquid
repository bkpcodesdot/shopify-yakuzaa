{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
.ai-symptoms-section-{{ ai_gen_id }} {
  padding: {{ section.settings.section_padding }}px 20px;
  background-color: {{ section.settings.section_background }};
  margin: 0 auto;
  max-width: 726px;
}
.ai-symptoms-header-{{ ai_gen_id }} {
  text-align: center;
  margin-bottom: 40px;
}
.ai-symptoms-title-{{ ai_gen_id }} {
  font-size: {{ section.settings.title_size }}px;
  color: {{ section.settings.title_color }};
  font-weight: 700;
  margin: 0 0 10px 0;
  text-align: start;
  line-height: 1.3;
}
.ai-symptoms-title-{{ ai_gen_id }} span {
  font-size: {{ section.settings.title_size }}px;
  color: #e26900;
  font-weight: 700;
}
.ai-symptoms-subtitle-{{ ai_gen_id }} {
  font-size: {{ section.settings.subtitle_size }}px;
  color: {{ section.settings.subtitle_color }};
  font-weight: 400;
  margin: 0;
  text-align: start;
}
.ai-symptoms-list-{{ ai_gen_id }} {
  display: flex;
  flex-direction: column;
  gap: 20px;
  margin-bottom: 40px;
}
.ai-symptom-box-{{ ai_gen_id }} {
  border: 2px solid {{ section.settings.box_border_color }};
  border-radius: {{ section.settings.box_border_radius }}px;
  padding: 24px;
  background-color: {{ section.settings.box_background }};
  transition: all 0.3s ease;
}
.ai-symptom-number-{{ ai_gen_id }} {
  font-size: {{ section.settings.number_size }}px;
  font-weight: 700;
  color: #ff6b35;
  margin-bottom: 8px;
}
.ai-symptom-title-{{ ai_gen_id }} {
  font-size: {{ section.settings.symptom_title_size }}px;
  font-weight: 700;
  color: {{ section.settings.symptom_title_color }};
  margin: 0 0 12px 0;
  line-height: 1.4;
}
.ai-symptom-divider-{{ ai_gen_id }} {
  width: 100%;
  height: 2px;
  background-color: {{ section.settings.box_border_color }};
  margin: 12px 0 16px 0;
}
.ai-symptom-description-{{ ai_gen_id }} {
  font-size: {{ section.settings.description_size }}px;
  color: {{ section.settings.description_color }};
  line-height: 1.6;
  margin: 0 0 16px 0;
}
.ai-symptom-science-{{ ai_gen_id }} {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: {{ section.settings.science_text_size }}px;
  color: {{ section.settings.science_text_color }};
  font-family: 'Roboto', sans-serif;
}
.ai-symptom-science-icon-{{ ai_gen_id }} {
  width: {{ section.settings.science_icon_size }}px;
  height: {{ section.settings.science_icon_size }}px;
  flex-shrink: 0;
}
.ai-symptom-science-icon-{{ ai_gen_id }} img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}
.ai-symptoms-cta-{{ ai_gen_id }} {
  text-align: center;
}
.ai-symptoms-button-{{ ai_gen_id }} {
  display: block;
  padding: {{ section.settings.button_padding }}px {{ section.settings.button_padding | times: 1.5 }}px;
  background-color: {{ section.settings.button_background }};
  color: {{ section.settings.button_text_color }};
  text-decoration: none;
  border-radius: {{ section.settings.button_border_radius }}px;
  font-size: {{ section.settings.button_text_size }}px;
  font-weight: 700;
  text-transform: uppercase;
  transition: all 0.3s ease;
}
.ai-symptoms-button-{{ ai_gen_id }}:hover {
  background-color: {{ section.settings.button_hover_background }};
  transform: translateY(-2px);
  color: #ee882f;
  border: 2px solid #ff6b35;
}
@media screen and (max-width: 749px) {
  .ai-symptoms-section-{{ ai_gen_id }} {
    padding: {{ section.settings.section_padding | times: 0.7 }}px 16px;
  }
  .ai-symptoms-title-{{ ai_gen_id }} {
    font-size: {{ section.settings.title_size | times: 0.8 }}px;
  }
  .ai-symptoms-subtitle-{{ ai_gen_id }} {
    font-size: {{ section.settings.subtitle_size | times: 0.9 }}px;
  }
  .ai-symptom-box-{{ ai_gen_id }} {
    padding: 20px;
  }
  .ai-symptoms-button-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ section.settings.button_padding | times: 1.2 }}px;
  }
}
{% endstyle %}
{% assign ai_gen_id = section.id %}

<section class="ai-symptoms-section-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
  <div class="ai-symptoms-header-{{ ai_gen_id }}">
    {% if section.settings.title_before != blank %}
      <h2 class="ai-symptoms-title-{{ ai_gen_id }}">
        {{ section.settings.title_before }}
        <span>{{ section.settings.title_highlight }}</span>
      </h2>
    {% endif %}
    {% if section.settings.section_subtitle != blank %}
      <p class="ai-symptoms-subtitle-{{ ai_gen_id }}">{{ section.settings.section_subtitle }}</p>
    {% endif %}
  </div>

  <div class="ai-symptoms-list-{{ ai_gen_id }}">
    {%- for i in (1..5) -%}
      {% capture enabled %}symptom_{{ i }}_enabled{% endcapture %}
      {% capture title %}symptom_{{ i }}_title{% endcapture %}
      {% capture description %}symptom_{{ i }}_description{% endcapture %}
      {% capture science_text %}symptom_{{ i }}_science_text{% endcapture %}
      {% capture icon %}symptom_{{ i }}_icon{% endcapture %}

      {% if section.settings[enabled] %}
        <div class="ai-symptom-box-{{ ai_gen_id }}">
          <div class="ai-symptom-number-{{ ai_gen_id }}">{{ i }}.</div>
          
          {% if section.settings[title] != blank %}
            <h3 class="ai-symptom-title-{{ ai_gen_id }}">{{ section.settings[title] }}</h3>
          {% endif %}
          
          <div class="ai-symptom-divider-{{ ai_gen_id }}"></div>
          
          {% if section.settings[description] != blank %}
            <p class="ai-symptom-description-{{ ai_gen_id }}">{{ section.settings[description] }}</p>
          {% endif %}
          
          {% if section.settings[science_text] != blank %}
            <div class="ai-symptom-science-{{ ai_gen_id }}">
              <div class="ai-symptom-science-icon-{{ ai_gen_id }}">
                {% if section.settings[icon] != blank %}
                  <img src="{{ section.settings[icon] | image_url: width: 100 }}" alt="Science icon" loading="lazy">
                {% else %}
                  {{ 'image' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <span><em><strong>Science Says:</strong></em> <em>{{ section.settings[science_text] }}</em></span>
            </div>
          {% endif %}
        </div>
      {% endif %}
    {%- endfor -%}
  </div>

  {% if section.settings.cta_text != blank %}
    <div class="ai-symptoms-cta-{{ ai_gen_id }}">
      <a href="{{ section.settings.cta_link }}" class="ai-symptoms-button-{{ ai_gen_id }}">
        {{ section.settings.cta_text }}
      </a>
    </div>
  {% endif %}
</section>
