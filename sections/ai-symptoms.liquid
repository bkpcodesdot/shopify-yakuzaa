  padding-bottom:40px;
}
.ai-timeline__content-template--19594664411293aisymptomsihe6tw.active::before {
    background: #01640108; /* semi-transparent green */
    border-color: #016401; /* solid green border */
}
.timline-inner {
    display: flex;
    /* align-items: center; */
    gap: 16px;
    border-bottom: 1px solid #01640199;
    margin-bottom: 12px;
}
/* Reset Default Browser Margins for All Block Content */
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} *,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-description__text-{{ ai_gen_id }} *,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-author__name-{{ ai_gen_id }} *,
.ai-symptoms-section-{{ ai_gen_id }} .ai-text-block__content-{{ ai_gen_id }} *,
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptom-description-{{ ai_gen_id }} *,
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptoms-title-{{ ai_gen_id }} *,
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptoms-title-{{ ai_gen_id }},
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptom-title-{{ ai_gen_id }} {
  margin: 0 !important;
  padding: 0 !important;
}

/* Subtitle keeps its custom top margin - only reset bottom/left/right */
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptoms-subtitle-{{ ai_gen_id }} {
  margin-bottom: 0 !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  padding: 0 !important;
}

/* Bold text styling for richtext content */
.ai-symptoms-section-{{ ai_gen_id }} strong,
.ai-symptoms-section-{{ ai_gen_id }} b {
  font-weight: 700 !important;
}

/* Heading Standardization - All headings use font-weight: 700 !important */
.ai-symptoms-section-{{ ai_gen_id }} h1,
.ai-symptoms-section-{{ ai_gen_id }} h2,
.ai-symptoms-section-{{ ai_gen_id }} h3,
.ai-symptoms-section-{{ ai_gen_id }} h4,
.ai-symptoms-section-{{ ai_gen_id }} h5,
.ai-symptoms-section-{{ ai_gen_id }} h6,
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptoms-title-{{ ai_gen_id }},
.ai-symptoms-section-{{ ai_gen_id }} .ai-before-after-article__heading-{{ ai_gen_id }},
.ai-symptoms-section-{{ ai_gen_id }} .ai-symptom-title-{{ ai_gen_id }},
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} p,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} h1,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} h2,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} h3,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} h4,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} h5,
.ai-symptoms-section-{{ ai_gen_id }} .ai-article-heading__text-{{ ai_gen_id }} h6 {
  font-weight: 700 !important;
}
/* Container */
.ai-symptoms-section-{{ ai_gen_id }} {
  padding: {{ section.settings.section_padding }}px 20px;
  background-color: {{ section.settings.section_background }};
  margin-left: auto;
  margin-right: auto;
  max-width: 726px;
  box-sizing: border-box;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

/* Header */
.ai-symptoms-header-{{ ai_gen_id }} { margin-bottom: 32px; }
.ai-symptoms-title-{{ ai_gen_id }} { margin: 0 0 8px 0; font-weight:700; line-height:1.2; text-align:left; }
.ai-symptoms-subtitle-{{ ai_gen_id }} { margin: 0; font-weight:400; text-align:left; }

/* List */
.ai-symptoms-list-{{ ai_gen_id }} { display: flex; flex-direction: column; gap: 18px; margin: 30px 0 24px; }

/* Box */
.ai-symptom-box-{{ ai_gen_id }} {
  padding: 20px;
  transition: transform 0.22s ease, box-shadow 0.22s ease;
  box-sizing: border-box;
}
.ai-symptom-box-{{ ai_gen_id }}:hover {
  transform: translateY(-6px);
  box-shadow: 0 12px 30px rgba(0,0,0,0.08);
}

/* Top row */
.ai-symptom-top-{{ ai_gen_id }} { display:flex; gap:12px; align-items:flex-start; }
.ai-symptom-number-{{ ai_gen_id }} { font-weight:800; flex-shrink:0; line-height:1; }
.ai-symptom-title-{{ ai_gen_id }} { margin: 0; font-weight:700; }

/* Divider */
.ai-symptom-divider-{{ ai_gen_id }} { height: 2px; margin: 12px 0; width: 100%; }

/* Description */
.ai-symptom-description-{{ ai_gen_id }} { margin: 0 0 12px 0; line-height: 1.5; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }

/* Science */
.ai-symptom-science-{{ ai_gen_id }} { display:flex; gap:10px; align-items:center; }
.ai-symptom-science-icon-{{ ai_gen_id }} { display:flex; align-items:center; justify-content:center; }

/* CTA */
.ai-symptoms-cta-{{ ai_gen_id }} { text-align:center; margin-top:18px; }
.ai-symptoms-button-{{ ai_gen_id }} { display:inline-block; width:100%; text-decoration:none; font-weight:700; transition: background 0.18s ease, transform 0.18s ease; }

/* Mobile */
@media (max-width: 749px) {
  .ai-symptoms-section-{{ ai_gen_id }} { padding: {{ section.settings.section_padding | times: 0.7 }}px 16px; }
  .ai-symptom-box-{{ ai_gen_id }} { padding: 16px; }
  .ai-symptoms-button-{{ ai_gen_id }} { width: 100%; padding: 14px; }
}
{% endstyle %}

<section class="ai-symptoms-section-{{ ai_gen_id }}" {{ section.shopify_attributes }}>
