    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .ai-educational-banner__image-placeholder-{{ ai_gen_id }} {
    {% if section.settings.main_image_width == 'full' %}
      width: 100%;
    {% elsif section.settings.main_image_width == 'half' %}
