    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-educational-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

