{% doc %}
  @prompt
    create i hero section 
    in backgroup set marquee with wavy 
    i can set all editable like time duration, text, marquee color etc
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-marquee-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.hero_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ block.settings.overlay_color }};
  }

  .ai-hero-marquee-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
  }

  .ai-hero-marquee-wave-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .ai-hero-marquee-wave-{{ ai_gen_id }} {
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    font-size: {{ block.settings.marquee_font_size }}px;
    font-weight: {{ block.settings.marquee_font_weight }};
    color: {{ block.settings.marquee_color }};
    opacity: {{ block.settings.marquee_opacity | divided_by: 100.0 }};
    line-height: 1.2;
  }

  .ai-hero-marquee-wave-{{ ai_gen_id }}:nth-child(odd) {
    animation: ai-hero-marquee-scroll-left-{{ ai_gen_id }} {{ block.settings.marquee_duration }}s linear infinite;
  }

  .ai-hero-marquee-wave-{{ ai_gen_id }}:nth-child(even) {
    animation: ai-hero-marquee-scroll-right-{{ ai_gen_id }} {{ block.settings.marquee_duration }}s linear infinite;
  }

  .ai-hero-marquee-text-{{ ai_gen_id }} {
    display: inline-block;
    padding: 0 {{ block.settings.marquee_spacing }}px;
    transform: skewY({{ block.settings.wave_angle }}deg);
  }

  .ai-hero-marquee-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 40px 20px;
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-hero-marquee-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 700;
  }

  .ai-hero-marquee-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_font_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.button_spacing }}px;
    line-height: 1.5;
  }

  .ai-hero-marquee-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-marquee-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @keyframes ai-hero-marquee-scroll-left-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes ai-hero-marquee-scroll-right-{{ ai_gen_id }} {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-hero-marquee-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height | times: 0.7 }}px;
    }

    .ai-hero-marquee-wave-{{ ai_gen_id }} {
      font-size: {{ block.settings.marquee_font_size | times: 0.6 }}px;
    }

    .ai-hero-marquee-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.6 }}px;
    }

    .ai-hero-marquee-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_font_size | times: 0.8 }}px;
    }

    .ai-hero-marquee-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<hero-marquee-{{ ai_gen_id }} class="ai-hero-marquee-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-marquee-background-{{ ai_gen_id }}">
    <div class="ai-hero-marquee-wave-container-{{ ai_gen_id }}">
      {% for i in (1..block.settings.wave_count) %}
        <div class="ai-hero-marquee-wave-{{ ai_gen_id }}">
          {% for j in (1..20) %}
            <span class="ai-hero-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text }}</span>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="ai-hero-marquee-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h1 class="ai-hero-marquee-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-hero-marquee-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-hero-marquee-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</hero-marquee-{{ ai_gen_id }}>

<script>
  (function() {
    class HeroMarquee{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.style.display = 'block';
      }
    }

    customElements.define('hero-marquee-{{ ai_gen_id }}', HeroMarquee{{ ai_gen_id }});
  })();
</script>

