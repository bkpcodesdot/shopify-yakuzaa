<script>
(function() {
  class TimelineSection{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.milestones = [];
      this.progressLine = null;
      this.timelineWrapper = null;
    }

    connectedCallback() {
      this.milestones = this.querySelectorAll('.ai-timeline-milestone-{{ ai_gen_id }}');
      this.progressLine = this.querySelector('.ai-timeline-line-progress-{{ ai_gen_id }}');
      this.timelineWrapper = this.querySelector('.ai-timeline-wrapper-{{ ai_gen_id }}');
      
      this.setupScrollObserver();
      this.setupProgressAnimation();
    }

    setupScrollObserver() {
      const observerOptions = {
        threshold: 0.3,
        rootMargin: '-50px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            setTimeout(() => {
              entry.target.classList.add('active');
            }, 300);
          }
        });
      }, observerOptions);

      this.milestones.forEach(milestone => {
        observer.observe(milestone);
      });
    }

    setupProgressAnimation() {
      const updateProgress = () => {
        if (!this.timelineWrapper || !this.progressLine) return;

        const rect = this.timelineWrapper.getBoundingClientRect();
        const windowHeight = window.innerHeight;
        const timelineHeight = this.timelineWrapper.offsetHeight;
        const startOffset = windowHeight * 0.8;
        const endOffset = windowHeight * 0.2;
        let progress = 0;
        
        if (rect.top <= startOffset && rect.bottom >= endOffset) {
          const visibleHeight = Math.min(startOffset - rect.top, timelineHeight);
          const totalScrollableHeight = timelineHeight + (startOffset - endOffset);
          progress = Math.max(0, Math.min(1, visibleHeight / totalScrollableHeight));
        } else if (rect.bottom< endOffset) {
          progress = 1;
        }
        
        this.progressLine.style.height = `${progress * 100}%`;
      };

      window.addEventListener('scroll', updateProgress);
      window.addEventListener('resize', updateProgress);
      updateProgress();
    }
  }

  customElements.define('timeline-section-{{ ai_gen_id }}', TimelineSection{{ ai_gen_id }});
})();
</script>

