    }

    .ai-benefits-cta-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-benefits-highlight-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-benefits-container-{{ ai_gen_id }}">
    <div class="ai-benefits-header-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-benefits-heading-{{ ai_gen_id }}">
          {% if block.settings.heading_accent_text != blank %}
            {{ block.settings.heading | replace: block.settings.heading_accent_text, '<span class="ai-benefits-heading-accent-' | append: ai_gen_id | append: '">' | append: block.settings.heading_accent_text | append: '</span>' }}
          {% else %}
            {{ block.settings.heading }}
          {% endif %}
        </h2>
      {% endif %}

      {% if block.settings.intro_text != blank %}
        <div class="ai-benefits-intro-{{ ai_gen_id }}">
          {{ block.settings.intro_text }}
        </div>
      {% endif %}
    </div>

    <div class="ai-benefits-content-{{ ai_gen_id }}">
      <div class="ai-benefits-image-section-{{ ai_gen_id }}">
        {% if block.settings.enable_bg_image and block.settings.bg_image %}
          <img
            src="{{ block.settings.bg_image | image_url: width: 800 }}"
            alt="{{ block.settings.bg_image.alt | escape }}"
            class="ai-benefits-bg-image-{{ ai_gen_id }}"
            loading="lazy"
          >
        {% endif %}

        {% if block.settings.product_image %}
          <img
            src="{{ block.settings.product_image | image_url: width: 600 }}"
            alt="{{ block.settings.product_image.alt | escape }}"
            class="ai-benefits-product-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.product_image.width }}"
            height="{{ block.settings.product_image.height }}"
          >
        {% else %}
          <div class="ai-benefits-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-benefits-features-section-{{ ai_gen_id }}">
        {% if block.settings.features_list != blank %}
          <div class="ai-benefits-features-list-{{ ai_gen_id }}">
            {% assign features = block.settings.features_list | split: '|' %}
            {% for feature in features %}
              {% if feature != blank %}
                <div class="ai-benefits-feature-item-{{ ai_gen_id }}">
                  <svg class="ai-benefits-feature-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20,6 9,17 4,12"></polyline>
                  </svg>
                  <p class="ai-benefits-feature-text-{{ ai_gen_id }}">{{ feature | strip }}</p>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

        {% if block.settings.support_text != blank %}
          <div class="ai-benefits-support-text-{{ ai_gen_id }}">
            {{ block.settings.support_text }}
          </div>
        {% endif %}

        {% if block.settings.button_text != blank %}
          <div class="ai-benefits-cta-section-{{ ai_gen_id }}">
            <a
              href="{{ block.settings.button_link | default: '#' }}"
              class="ai-benefits-cta-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

