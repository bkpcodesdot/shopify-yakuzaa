{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-supplement-hero-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 20px;
    background: linear-gradient(135deg, {{ block.settings.background_color_1 }} 0%, {{ block.settings.background_color_2 }} 100%);
    position: relative;
    overflow: hidden;
  }

  .ai-supplement-hero-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    align-items: center;
  }

  .ai-supplement-hero-content-{{ ai_gen_id }} {
    z-index: 2;
    position: relative;
  }

  .ai-supplement-hero-warning-{{ ai_gen_id }} {
    color: #411158;
    font-weight: bold;
    font-size: 16px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-supplement-hero-headline-{{ ai_gen_id }} {
    font-family: 'Montserrat', sans-serif;
    font-size: {{ block.settings.headline_size }}px;
    color: #1D0032;
    line-height: 1.4;
    margin-bottom: 30px;
    font-weight: 700;
  }

  .ai-supplement-hero-headline-{{ ai_gen_id }} .highlight {
    font-weight: 900;
    color: {{ block.settings.highlight_color }};
  }

  .ai-supplement-hero-cta-{{ ai_gen_id }} {
    background-color: #00D264;
    color: #FFFFFF;
    font-weight: bold;
    font-size: 16px;
    padding: 16px 24px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 20px;
    transition: all 0.3s ease;
  }

  .ai-supplement-hero-cta-{{ ai_gen_id }}:hover {
    background-color: #00B555;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 210, 100, 0.3);
  }

  .ai-supplement-hero-guarantee-{{ ai_gen_id }} {
    font-size: 14px;
    color: #3F3F3F;
    margin-bottom: 30px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
  }

  .ai-supplement-hero-testimonial-{{ ai_gen_id }} {
    background-color: #FFFFFF;
    border: 1px solid #EAEAEA;
    border-radius: 12px;
    padding: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    gap: 12px;
    align-items: flex-start;
  }

  .ai-supplement-hero-testimonial-avatar-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    flex-shrink: 0;
    overflow: hidden;
  }

  .ai-supplement-hero-testimonial-avatar-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-supplement-hero-testimonial-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 20px;
  }

  .ai-supplement-hero-testimonial-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .ai-supplement-hero-testimonial-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: #333;
    margin-bottom: 8px;
    line-height: 1.5;
  }

  .ai-supplement-hero-testimonial-author-{{ ai_gen_id }} {
    font-size: 14px;
    color: #666;
    font-weight: 600;
  }

  .ai-supplement-hero-image-section-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-supplement-hero-image-container-{{ ai_gen_id }} {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    max-width: 400px;
    width: 100%;
  }

  .ai-supplement-hero-image-container-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-supplement-hero-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-supplement-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.5;
  }

  .ai-supplement-hero-overlay-text-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    right: 20px;
    background-color: #FFFF66;
    color: #1D0032;
    font-size: 28px;
    font-weight: 900;
    padding: 8px 16px;
    border-radius: 8px;
    transform: rotate(-5deg);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    font-family: 'Brush Script MT', cursive;
  }

  .ai-supplement-hero-splatter-{{ ai_gen_id }} {
    position: absolute;
    top: -20px;
    right: -20px;
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, #FFFF66 30%, transparent 70%);
    border-radius: 50%;
    opacity: 0.3;
    z-index: -1;
  }

  .ai-supplement-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(255, 255, 255, 0.9);
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
  }

  @media screen and (max-width: 768px) {
    .ai-supplement-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
      text-align: center;
    }

    .ai-supplement-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-supplement-hero-guarantee-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-supplement-hero-testimonial-{{ ai_gen_id }} {
      text-align: left;
    }

    .ai-supplement-hero-overlay-text-{{ ai_gen_id }} {
      font-size: 24px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-supplement-hero-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 15px;
    }

    .ai-supplement-hero-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.6 }}px;
    }

    .ai-supplement-hero-cta-{{ ai_gen_id }} {
      padding: 14px 20px;
      font-size: 15px;
    }

    .ai-supplement-hero-guarantee-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 10px;
    }
  }
{% endstyle %}

