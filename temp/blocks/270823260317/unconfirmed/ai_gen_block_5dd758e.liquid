    {
      "type": "range",
      "id": "heading_margin",
      "min": 0,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Heading bottom margin",
      "default": 15
    },
    {
      "type": "range",
      "id": "text_margin",
      "min": 0,
      "max": 40,
      "step": 5,
      "unit": "px",
