{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-luxury-faq-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
  }

  .ai-luxury-faq-container-{{ ai_gen_id }} {
    width: 100%;
    padding: 0 20px;
  }

  .ai-luxury-faq-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 50% 50%;
    gap: {{ block.settings.column_gap }}px;
    align-items: stretch;
  }

  .ai-luxury-faq-content-{{ ai_gen_id }} {
    padding-right: 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: {{ block.settings.image_height }}px;
  }

  .ai-luxury-faq-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.text_color }};
    margin: 0;
    text-align: left;
  }

  .ai-luxury-faq-list-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-luxury-faq-item-{{ ai_gen_id }} {
    border-bottom: {{ block.settings.divider_width }}px solid {{ block.settings.divider_color }};
  }

  .ai-luxury-faq-item-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-luxury-faq-question-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: {{ block.settings.item_padding }}px 0;
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: color 0.3s ease;
  }

  .ai-luxury-faq-question-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-luxury-faq-question-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.question_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    margin: 0;
    padding-right: 20px;
    transition: color 0.3s ease;
  }

  .ai-luxury-faq-question-{{ ai_gen_id }}:hover .ai-luxury-faq-question-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_hover_color }};
  }

  .ai-luxury-faq-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    position: relative;
    transition: transform 0.3s ease;
  }

  .ai-luxury-faq-icon-{{ ai_gen_id }}::before,
  .ai-luxury-faq-icon-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    background-color: {{ block.settings.text_color }};
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .ai-luxury-faq-icon-{{ ai_gen_id }}::before {
    width: 16px;
    height: 2px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .ai-luxury-faq-icon-{{ ai_gen_id }}::after {
    width: 2px;
    height: 16px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .ai-luxury-faq-question-{{ ai_gen_id }}:hover .ai-luxury-faq-icon-{{ ai_gen_id }}::before,
  .ai-luxury-faq-question-{{ ai_gen_id }}:hover .ai-luxury-faq-icon-{{ ai_gen_id }}::after {
    background-color: {{ block.settings.text_hover_color }};
  }

  .ai-luxury-faq-item-{{ ai_gen_id }}.active .ai-luxury-faq-icon-{{ ai_gen_id }}::after {
    transform: translate(-50%, -50%) rotate(90deg);
  }

  .ai-luxury-faq-answer-{{ ai_gen_id }} {
    overflow: hidden;
    transition: height 0.4s ease;
    height: 0;
  }

  .ai-luxury-faq-answer-inner-{{ ai_gen_id }} {
    padding-bottom: {{ block.settings.item_padding }}px;
  }

  .ai-luxury-faq-answer-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.answer_size }}px;
    line-height: 1.6;
    color: {{ block.settings.answer_color }};
    margin: 0;
    padding-right: 44px;
  }

  .ai-luxury-faq-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-luxury-faq-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-luxury-faq-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-luxury-faq-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-luxury-faq-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-luxury-faq-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .ai-luxury-faq-content-{{ ai_gen_id }} {
      padding-right: 0;
      order: 2;
      min-height: auto;
      padding-top: 40px;
    }

    .ai-luxury-faq-image-column-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-luxury-faq-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-luxury-faq-question-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.question_size | times: 0.9 }}px;
    }

    .ai-luxury-faq-answer-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.answer_size | times: 0.9 }}px;
      padding-right: 0;
    }

    .ai-luxury-faq-image-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.6 }}px;
    }
  }
{% endstyle %}

<luxury-faq-{{ ai_gen_id }} class="ai-luxury-faq-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-luxury-faq-container-{{ ai_gen_id }}">
    <div class="ai-luxury-faq-grid-{{ ai_gen_id }}">
      <div class="ai-luxury-faq-content-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-luxury-faq-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        <ul class="ai-luxury-faq-list-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% liquid
              assign question_key = 'question_' | append: i
              assign answer_key = 'answer_' | append: i
              assign question = block.settings[question_key]
              assign answer = block.settings[answer_key]
            %}

            {% if question != blank %}
              <li class="ai-luxury-faq-item-{{ ai_gen_id }}" data-faq-item="{{ i }}">
                <button
                  class="ai-luxury-faq-question-{{ ai_gen_id }}"
                  aria-expanded="false"
                  aria-controls="ai-luxury-faq-answer-{{ ai_gen_id }}-{{ i }}"
                >
                  <span class="ai-luxury-faq-question-text-{{ ai_gen_id }}">{{ question }}</span>
                  <span class="ai-luxury-faq-icon-{{ ai_gen_id }}" aria-hidden="true"></span>
                </button>
                <div
                  class="ai-luxury-faq-answer-{{ ai_gen_id }}"
                  id="ai-luxury-faq-answer-{{ ai_gen_id }}-{{ i }}"
                >
                  <div class="ai-luxury-faq-answer-inner-{{ ai_gen_id }}">
                    {% if answer != blank %}
                      <p class="ai-luxury-faq-answer-text-{{ ai_gen_id }}">{{ answer }}</p>
                    {% endif %}
                  </div>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <div class="ai-luxury-faq-image-column-{{ ai_gen_id }}">
        <div class="ai-luxury-faq-image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 1200 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              class="ai-luxury-faq-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-luxury-faq-image-placeholder-{{ ai_gen_id }}">
              {{ 'lifestyle-1' | placeholder_svg_tag }}
              <div class="ai-luxury-faq-empty-state-{{ ai_gen_id }}">
                Add a lifestyle jewelry image
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</luxury-faq-{{ ai_gen_id }}>

<script>
  (function() {
    class LuxuryFaq{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('.ai-luxury-faq-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.items.forEach((item) => {
          const button = item.querySelector('.ai-luxury-faq-question-{{ ai_gen_id }}');
          const answer = item.querySelector('.ai-luxury-faq-answer-{{ ai_gen_id }}');
          const answerInner = answer.querySelector('.ai-luxury-faq-answer-inner-{{ ai_gen_id }}');
          
          button.addEventListener('click', () => {
            const isActive = item.classList.contains('active');
            
            this.items.forEach((otherItem) => {
              if (otherItem !== item) {
                const otherAnswer = otherItem.querySelector('.ai-luxury-faq-answer-{{ ai_gen_id }}');
                const otherButton = otherItem.querySelector('.ai-luxury-faq-question-{{ ai_gen_id }}');
                
                otherItem.classList.remove('active');
                otherAnswer.style.height = '0px';
                otherButton.setAttribute('aria-expanded', 'false');
              }
            });
            
            if (isActive) {
              item.classList.remove('active');
              answer.style.height = '0px';
              button.setAttribute('aria-expanded', 'false');
            } else {
              item.classList.add('active');
              const height = answerInner.offsetHeight;
              answer.style.height = height + 'px';
              button.setAttribute('aria-expanded', 'true');
            }
          });

          button.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' || e.key === ' ') {
              e.preventDefault();
              button.click();
            }
          });
        });
      }
    }

    customElements.define('luxury-faq-{{ ai_gen_id }}', LuxuryFaq{{ ai_gen_id }});
  })();
</script>

