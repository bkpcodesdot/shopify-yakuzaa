<script>
(function() {
  class BlogStickyOffer{{ai_gen_id}} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.setupQuantitySelector();
      this.setupAddToCart();
      this.setupCountdown();
    }

    setupQuantitySelector() {
      const decreaseBtn = this.querySelector('[data-action="decrease"]');
      const increaseBtn = this.querySelector('[data-action="increase"]');
      const quantityInput = this.querySelector('[data-quantity]');

      if (decreaseBtn && increaseBtn && quantityInput) {
        decreaseBtn.addEventListener('click', () => {
          const currentValue = parseInt(quantityInput.value);
          if (currentValue > 1) {
            quantityInput.value = currentValue - 1;
          }
        });

        increaseBtn.addEventListener('click', () => {
          const currentValue = parseInt(quantityInput.value);
          quantityInput.value = currentValue + 1;
        });
      }
    }

    setupAddToCart() {
      const addToCartBtn = this.querySelector('[data-add-to-cart]');
      const quantityInput = this.querySelector('[data-quantity]');

      if (addToCartBtn) {
        addToCartBtn.addEventListener('click', () => {
          const productId = {{ block.settings.featured_product.id | default: 'null' }};
          const variantId = {{ block.settings.featured_product.selected_or_first_available_variant.id | default: 'null' }};
          const quantity = quantityInput ? parseInt(quantityInput.value) : 1;

          if (productId && variantId) {
            const formData = {
              items: [{
                id: variantId,
                quantity: quantity
              }]
            };

            fetch('/cart/add.js', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
              window.location.href = '/cart';
            })
            .catch(error => {
              console.error('Error:', error);
            });
          }
        });
      }
    }

    setupCountdown() {
      const countdownElement = this.querySelector('[data-countdown]');
      if (!countdownElement) return;

      const targetDate = countdownElement.getAttribute('data-countdown');
      if (!targetDate) return;

      const countdownDate = new Date(targetDate).getTime();

      const updateCountdown = () => {
        const now = new Date().getTime();
        const distance = countdownDate - now;

        if (distance < 0) {
          countdownElement.innerHTML = '<div class="countdown-display">Offer Expired</div>';
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        countdownElement.innerHTML = `
          <div class="countdown-display">
            ${days}d ${hours}h ${minutes}m ${seconds}s
          </div>
        `;
      };

      updateCountdown();
      setInterval(updateCountdown, 1000);
    }
  }

  customElements.define('blog-sticky-offer-{{ ai_gen_id }}', BlogStickyOffer{{ai_gen_id}});
})();
</script>

