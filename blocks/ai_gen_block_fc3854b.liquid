<div class="ai-solution-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-solution-container-{{ ai_gen_id }}">
    <div class="ai-solution-content-{{ ai_gen_id }}">
      <div class="ai-solution-text-section-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-solution-heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.intro_text != blank %}
          <div class="ai-solution-intro-{{ ai_gen_id }}">
            {{ block.settings.intro_text }}
          </div>
        {% endif %}
<div class="ai-solution-image-section-{{ ai_gen_id }}"><div class="ai-solution-image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.main_image %}
              <img
                src="{{ block.settings.main_image | image_url: width: 800 }}"
                alt="{{ block.settings.main_image.alt | escape }}"
                class="ai-solution-image-{{ ai_gen_id }}"loading="lazy"
                width="{{ block.settings.main_image.width }}"
                height="{{ block.settings.main_image.height }}"
              >
            {% else %}
              <div class="ai-solution-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}<div class="ai-solution-empty-state-{{ ai_gen_id }}">
                  Add your product image
                </div>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="ai-solution-features-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            {% liquid
              assign feature_enabled_key = 'feature_' | append: i | append: '_enabled'
              assign feature_icon_key = 'feature_' | append: i | append: '_icon'
              assign feature_title_key = 'feature_' | append: i | append: '_title'
              assign feature_description_key = 'feature_' | append: i | append: '_description'

              assign feature_enabled = block.settings[feature_enabled_key]
              assign feature_icon = block.settings[feature_icon_key]
              assign feature_title = block.settings[feature_title_key]
              assign feature_description = block.settings[feature_description_key]
            %}

            {% if feature_enabled %}
              <div class="ai-solution-feature-{{ ai_gen_id }}">
                <div class="ai-solution-feature-icon-{{ ai_gen_id }}">
                  {% if feature_icon != blank %}
                    <img
                      src="{{ feature_icon | image_url: width: 100}}"
                      alt="{{ feature_title | escape }}"
                      loading="lazy"
                      width="100"
                      height="100"
                    >
                  {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20,6 9,17 4,12"></polyline>
                    </svg>
                  {% endif %}
                </div>
                <div class="ai-solution-feature-content-{{ ai_gen_id }}">
                  {% if feature_title != blank %}
                    <h3 class="ai-solution-feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
        {% if block.settings.body_text != blank %}
<div class="adv-content__body-content content-default" style="margin-bottom: {{ block.settings.margin_bottom }}px;">
  <p>{{ block.settings.body_text }}</p>
</div>
 {% endif %}
       {% if block.settings.button_text != blank %}
      <div class="Solution-table">
        <a href="{{ block.settings.button_link }}" class="Sulution-table-btn">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
    </div>
  </div>
</div>

