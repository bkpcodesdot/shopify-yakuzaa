>
  <div class="ai-hero-banner__container-{{ ai_gen_id }}">
    <div class="ai-hero-banner__content-{{ ai_gen_id }}">
      {% if block.settings.headline != blank %}
        <h1 class="ai-hero-banner__headline-{{ ai_gen_id }}">
          {{ block.settings.headline }}
        </h1>
      {% endif %}

      {% if block.settings.show_benefits %}
        <ul class="ai-hero-banner__benefits-{{ ai_gen_id }}">
          {% if block.settings.benefit_1 != blank %}
            <li class="ai-hero-banner__benefit-{{ ai_gen_id }}">
              <span class="ai-hero-banner__heart-{{ ai_gen_id }}">❤️</span>
              {{ block.settings.benefit_1 }}
            </li>
          {% endif %}
          {% if block.settings.benefit_2 != blank %}
            <li class="ai-hero-banner__benefit-{{ ai_gen_id }}">
              <span class="ai-hero-banner__heart-{{ ai_gen_id }}">❤️</span>
              {{ block.settings.benefit_2 }}
            </li>
          {% endif %}
          {% if block.settings.benefit_3 != blank %}
            <li class="ai-hero-banner__benefit-{{ ai_gen_id }}">
              <span class="ai-hero-banner__heart-{{ ai_gen_id }}">❤️</span>
              {{ block.settings.benefit_3 }}
            </li>
          {% endif %}
          {% if block.settings.benefit_4 != blank %}
            <li class="ai-hero-banner__benefit-{{ ai_gen_id }}">
              <span class="ai-hero-banner__heart-{{ ai_gen_id }}">❤️</span>
              {{ block.settings.benefit_4 }}
            </li>
          {% endif %}
          {% if block.settings.benefit_5 != blank %}
            <li class="ai-hero-banner__benefit-{{ ai_gen_id }}">
              <span class="ai-hero-banner__heart-{{ ai_gen_id }}">❤️</span>
              {{ block.settings.benefit_5 }}
            </li>
          {% endif %}
        </ul>
      {% endif %}

      {% if block.settings.body_text != blank %}
        <div class="ai-hero-banner__body-text-{{ ai_gen_id }}">
          {{ block.settings.body_text }}
        </div>
      {% endif %}

      {% if block.settings.closing_statement != blank %}
        <p class="ai-hero-banner__closing-{{ ai_gen_id }}">
          {{ block.settings.closing_statement }}
        </p>
      {% endif %}

      {% if block.settings.tagline != blank %}
        <p class="ai-hero-banner__tagline-{{ ai_gen_id }}">
          {{ block.settings.tagline }}
        </p>
      {% endif %}

      {% if block.settings.cta_text != blank %}
        <a
          href="{{ block.settings.cta_link }}"
          class="ai-hero-banner__cta-{{ ai_gen_id }}"
        >
          {{ block.settings.cta_text }}
        </a>
      {% endif %}
    </div>

    <div class="ai-hero-banner__image-container-{{ ai_gen_id }}">
      {% if block.settings.hero_image %}
        <img
          src="{{ block.settings.hero_image | image_url: width: 800 }}"
          alt="{{ block.settings.hero_image.alt | escape }}"
          class="ai-hero-banner__image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.hero_image.width }}"
          height="{{ block.settings.hero_image.height }}"
        >
      {% else %}
        <div class="ai-hero-banner__image-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}<div class="ai-hero-banner__empty-state-{{ ai_gen_id }}">
            Add your product image here
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

