{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-two-column-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 30% 70%;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-image-column-{{ ai_gen_id }} {
    position: relative;
    opacity: 0;
    transform: translateX(-50px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .ai-image-column-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .ai-main-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-bottom: 15px;
    z-index: 1;
  }

  .ai-main-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-main-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 300px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-main-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-overlay-bar-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: {{ block.settings.overlay_background_color }};
    padding: 15px 20px;
    border-radius: 0 0 {{ block.settings.image_border_radius }}px {{ block.settings.image_border_radius }}px;
    text-align: center;
  }

  .ai-overlay-name-{{ ai_gen_id }} {
    font-weight: bold;
    color: {{ block.settings.overlay_text_color }};
    margin: 0 0 5px;
    font-size: 24px;
  }

  .ai-overlay-designation-{{ ai_gen_id }} {
    color: {{ block.settings.overlay_text_color }};
    margin: 0;
    font-size: 15px;
    opacity: 1;
    text-transform: uppercase;
  }

  .ai-bottom-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.bottom_image_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
    position: absolute;
    top: auto;
    bottom: 3px;
    z-index: 0;
    left: -180px;
  }

  .ai-bottom-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.bottom_image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-bottom-image-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    opacity: 0.5;
  }

  .ai-bottom-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    text-align: center;
  }

  .ai-content-column-{{ ai_gen_id }} {
    padding-left: {{ block.settings.content_padding }}px;
  }

  .ai-content-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: bold;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .ai-content-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 30px;
    line-height: 1.6;
    font-size: {{ block.settings.text_size }}px;
  }

  .ai-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
  }

  .ai-feature-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-icon-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .ai-feature-icon-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.icon_placeholder_color }};
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-feature-icon-placeholder-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    opacity: 0.5;
  }

  .ai-feature-text-{{ ai_gen_id }} {
    font-weight: bold;
    color: {{ block.settings.feature_text_color }};
    font-size: {{ block.settings.feature_text_size }}px;
  }

  .ai-bottom-text-{{ ai_gen_id }} {
    font-weight: bold;
    color: {{ block.settings.bottom_text_color }};
    font-size: {{ block.settings.bottom_text_size }}px;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-two-column-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .ai-content-column-{{ ai_gen_id }} {
      padding-left: 0;
    }

    .ai-features-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 15px;
    }

    .ai-content-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<two-column-section-{{ ai_gen_id }}
  class="ai-two-column-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-two-column-container-{{ ai_gen_id }}">
    <div class="ai-image-column-{{ ai_gen_id }}" data-animate>
      <div class="ai-main-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.main_image %}
          <img
            src="{{ block.settings.main_image | image_url: width: 600 }}"
            alt="{{ block.settings.main_image.alt | escape }}"
            class="ai-main-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.main_image.width }}"
            height="{{ block.settings.main_image.height }}"
          >
        {% else %}
          <div class="ai-main-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}

        <div class="ai-overlay-bar-{{ ai_gen_id }}">
          {% if block.settings.person_name != blank %}
            <h3 class="ai-overlay-name-{{ ai_gen_id }}">{{ block.settings.person_name }}</h3>
          {% endif %}
          {% if block.settings.person_designation != blank %}
            <p class="ai-overlay-designation-{{ ai_gen_id }}">{{ block.settings.person_designation }}</p>
          {% endif %}
        </div>
      </div>

      {% if block.settings.bottom_image %}
        <img
          src="{{ block.settings.bottom_image | image_url: width: 600 }}"
          alt="{{ block.settings.bottom_image.alt | escape }}"
          class="ai-bottom-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.bottom_image.width }}"
          height="{{ block.settings.bottom_image.height }}"
        >
      {% else %}
        <div class="ai-bottom-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-bottom-image-empty-state-{{ ai_gen_id }}">
            Add bottom image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-content-column-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-content-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-content-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}

      <div class="ai-features-grid-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign icon_key = 'feature_' | append: i | append: '_icon'
            assign text_key = 'feature_' | append: i | append: '_text'
            assign feature_icon = block.settings[icon_key]
            assign feature_text = block.settings[text_key]
          %}

          {% if feature_text != blank %}
            <div class="ai-feature-item-{{ ai_gen_id }}">
              <div class="ai-feature-icon-{{ ai_gen_id }}">
                {% if feature_icon %}
                  <img
                    src="{{ feature_icon | image_url: width: 100 }}"
                    alt="{{ feature_text | escape }}"
                    loading="lazy"
                  >
                {% else %}
                  <div class="ai-feature-icon-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <span class="ai-feature-text-{{ ai_gen_id }}">{{ feature_text }}</span>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if block.settings.bottom_text != blank %}
        <p class="ai-bottom-text-{{ ai_gen_id }}">{{ block.settings.bottom_text }}</p>
      {% endif %}
    </div>
  </div>
</two-column-section-{{ ai_gen_id }}>

<script>
  (function() {
    class TwoColumnSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const animateElement = this.querySelector('[data-animate]');
        
        if (!animateElement) return;

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.2,
          rootMargin: '0px 0px -50px 0px'
        });

        observer.observe(animateElement);
      }
    }

    customElements.define('two-column-section-{{ ai_gen_id }}', TwoColumnSection{{ ai_gen_id }});
  })();
</script>

