</timeline-animation-{{ ai_gen_id }}><script>
  (function() {
    class TimelineAnimation{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.hasAnimated = false;
      }

      connectedCallback() {
        this.setupTimelineElements();
        this.setupIntersectionObserver();
        window.addEventListener('resize', () => this.setupTimelineElements());
      }

      setupTimelineElements() {
        const cards = this.querySelectorAll('[data-timeline-card]');
        const lineContainer = this.querySelector('[data-timeline-line]');
        
        if (!cards.length || !lineContainer) return;

        lineContainer.innerHTML = '';

        cards.forEach((card, index) => {
          const cardRect = card.getBoundingClientRect();
          const containerRect = this.querySelector('.ai-timeline-main-{{ ai_gen_id }}').getBoundingClientRect();
          
          const cardTop = card.offsetTop;
          const cardHeight = card.offsetHeight;
          const cardCenter = cardTop + (cardHeight / 2);

          const circle = document.createElement('div');
          circle.className = 'ai-timeline-circle-{{ ai_gen_id }}';
          circle.style.top = `${cardCenter - {{ block.settings.circle_size | divided_by: 2 }}}px`;
          circle.innerHTML = '<div class="ai-timeline-circle-inner-{{ ai_gen_id }}"></div>';
          
          lineContainer.appendChild(circle);

          if (index < cards.length - 1) {
            const nextCard = cards[index + 1];
            const nextCardTop = nextCard.offsetTop;
            const nextCardHeight = nextCard.offsetHeight;
            const nextCardCenter = nextCardTop + (nextCardHeight / 2);

            const line = document.createElement('div');
            line.className = 'ai-timeline-line-{{ ai_gen_id }}';
            line.style.top = `${cardCenter + {{ block.settings.circle_size | divided_by: 2 }}}px`;
            line.style.height = `${nextCardCenter - cardCenter - {{ block.settings.circle_size }}}px`;
            
            lineContainer.appendChild(line);
          }
        });
      }

      setupIntersectionObserver() {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting && !this.hasAnimated) {
              this.startAnimation();
              this.hasAnimated = true;
            }
          });
        }, {
          threshold: 0.2
        });

        observer.observe(this);
      }

      startAnimation() {
        this.classList.remove('ai-timeline-animation-paused-{{ ai_gen_id }}');
      }
    }

    customElements.define('timeline-animation-{{ ai_gen_id }}', TimelineAnimation{{ ai_gen_id }});
  })();
</script>

