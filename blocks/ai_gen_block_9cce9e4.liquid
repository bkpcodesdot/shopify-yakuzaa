{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-chart-{{ ai_gen_id }} {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-comparison-chart__heading-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.heading_size }}px;
    margin-bottom: 40px;
    color: {{ block.settings.heading_color }};
  }

  .ai-comparison-chart__crush-{{ ai_gen_id }} {
    color: {{ block.settings.crush_color }};
  }

  .ai-comparison-chart__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 0;
    align-items: start;
    {% if block.settings.show_border %}
      border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
      border-radius: {{ block.settings.border_radius }}px;
      overflow: hidden;
    {% endif %}
  }

  .ai-comparison-chart__column-{{ ai_gen_id }} {
    {% if block.settings.show_border %}
      border-right: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}
  }

  .ai-comparison-chart__column-{{ ai_gen_id }}:last-child {
    border-right: none;
  }

  .ai-comparison-chart__column--middle-{{ ai_gen_id }} {
    background-color: {{ block.settings.middle_bg_color }};
    color: {{ block.settings.middle_text_color }};
  }

  .ai-comparison-chart__product-section-{{ ai_gen_id }} {
    padding: 20px;
    text-align: center;
    {% if block.settings.show_border %}
      border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}
  }

  .ai-comparison-chart__middle-header-{{ ai_gen_id }} {
    padding: 20px;
    text-align: center;
    {% if block.settings.show_border %}
      border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    {% endif %}
    padding-top: {{ block.settings.middle_top_spacing }}px;
  }

  .ai-comparison-chart__product-image-{{ ai_gen_id }} {
    width: 100%;
    max-width: 150px;
    margin: 0 auto 15px;
    display: block;
  }

  .ai-comparison-chart__product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: 150px;
    margin: 0 auto 15px;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-comparison-chart__product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-comparison-chart__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
  }

  .ai-comparison-chart__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    margin: 0;
    color: {{ block.settings.product_title_color }};
  }

  .ai-comparison-chart__middle-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.middle_heading_size }}px;
    font-weight: 600;
    margin: 0;
  }

  .ai-comparison-chart__features-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-comparison-chart__feature-row-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.row_padding }}px 20px;
    {% if block.settings.show_border %}
      border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.divider_color }};
    {% endif %}
    min-height: {{ block.settings.row_height }}px;
  }

  .ai-comparison-chart__feature-row-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-comparison-chart__feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.feature_title_size }}px;
    color: {{ block.settings.feature_title_color }};
    text-align: center;
    padding: {{ block.settings.row_padding }}px 20px;
    {% if block.settings.show_border %}
      border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.divider_color }};
    {% endif %}
    min-height: {{ block.settings.row_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
  }

  .ai-comparison-chart__feature-title-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-comparison-chart__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-chart__icon--check-{{ ai_gen_id }} {
    background-color: {{ block.settings.check_bg_color }};
  }

  .ai-comparison-chart__icon--cross-{{ ai_gen_id }} {
    background-color: {{ block.settings.cross_bg_color }};
  }

  .ai-comparison-chart__icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size | times: 0.6 }}px;
    height: {{ block.settings.icon_size | times: 0.6 }}px;
    fill: white;
  }

  @media screen and (max-width: 768px) {
    .ai-comparison-chart-{{ ai_gen_id }} {
      padding: 20px 10px;
    }

    .ai-comparison-chart__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 30px;
    }

    .ai-comparison-chart__product-section-{{ ai_gen_id }},
    .ai-comparison-chart__middle-header-{{ ai_gen_id }} {
      padding: 15px 10px;
    }

    .ai-comparison-chart__feature-row-{{ ai_gen_id }},
    .ai-comparison-chart__feature-title-{{ ai_gen_id }} {
      padding: {{ block.settings.row_padding }}px 10px;
    }

    .ai-comparison-chart__product-image-{{ ai_gen_id }},
    .ai-comparison-chart__product-image-placeholder-{{ ai_gen_id }} {
      max-width: 120px;
    }
  }
{% endstyle %}

<div class="ai-comparison-chart-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_heading != blank %}
    <h2 class="ai-comparison-chart__heading-{{ ai_gen_id }}">
      {% assign heading_parts = block.settings.section_heading | split: 'CRUSH' %}
      {% if heading_parts.size > 1 %}
        {{ heading_parts[0] }}<span class="ai-comparison-chart__crush-{{ ai_gen_id }}">CRUSH</span>{{ heading_parts[1] }}
      {% else %}
        {{ block.settings.section_heading }}
      {% endif %}
    </h2>
  {% endif %}

  <div class="ai-comparison-chart__container-{{ ai_gen_id }}">
    <div class="ai-comparison-chart__column-{{ ai_gen_id }}">
      <div class="ai-comparison-chart__product-section-{{ ai_gen_id }}">
        {% if block.settings.left_product_image %}
          <img
            src="{{ block.settings.left_product_image | image_url: width: 300 }}"
            alt="{{ block.settings.left_product_image.alt | escape }}"
            class="ai-comparison-chart__product-image-{{ ai_gen_id }}"
            loading="lazy"
            width="300"
            height="300"
          >
        {% else %}
          <div class="ai-comparison-chart__product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
            <div class="ai-comparison-chart__empty-state-{{ ai_gen_id }}">
              Add product image
            </div>
          </div>
        {% endif %}

        {% if block.settings.left_product_title != blank %}
          <h3 class="ai-comparison-chart__product-title-{{ ai_gen_id }}">{{ block.settings.left_product_title }}</h3>
        {% endif %}
      </div>

      <div class="ai-comparison-chart__features-{{ ai_gen_id }}">
        {% for i in (1..13) %}
          {% assign feature_key = 'left_feature_' | append: i %}
          {% assign feature_title_key = 'feature_title_' | append: i %}
          {% assign feature_value = block.settings[feature_key] %}
          {% assign feature_title = block.settings[feature_title_key] %}
          {% if feature_title != blank %}
            <div class="ai-comparison-chart__feature-row-{{ ai_gen_id }}">
              {% if feature_value != blank %}
                <div class="ai-comparison-chart__icon-{{ ai_gen_id }} ai-comparison-chart__icon--{{ feature_value }}-{{ ai_gen_id }}">
                  {% if feature_value == 'check' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                  {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-comparison-chart__column-{{ ai_gen_id }} ai-comparison-chart__column--middle-{{ ai_gen_id }}">
      <div class="ai-comparison-chart__middle-header-{{ ai_gen_id }}">
        {% if block.settings.middle_heading != blank %}
          <h3 class="ai-comparison-chart__middle-heading-{{ ai_gen_id }}">{{ block.settings.middle_heading }}</h3>
        {% endif %}
      </div>

      <div class="ai-comparison-chart__features-{{ ai_gen_id }}">
        {% for i in (1..13) %}
          {% assign feature_title_key = 'feature_title_' | append: i %}
          {% assign feature_title = block.settings[feature_title_key] %}
          {% if feature_title != blank %}
            <div class="ai-comparison-chart__feature-title-{{ ai_gen_id }}">
              {{ feature_title }}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="ai-comparison-chart__column-{{ ai_gen_id }}">
      <div class="ai-comparison-chart__product-section-{{ ai_gen_id }}">
        {% if block.settings.right_product_image %}
          <img
            src="{{ block.settings.right_product_image | image_url: width: 300 }}"
            alt="{{ block.settings.right_product_image.alt | escape }}"
            class="ai-comparison-chart__product-image-{{ ai_gen_id }}"
            loading="lazy"
            width="300"
            height="300"
          >
        {% else %}
          <div class="ai-comparison-chart__product-image-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
            <div class="ai-comparison-chart__empty-state-{{ ai_gen_id }}">
              Add product image
            </div>
          </div>
        {% endif %}

        {% if block.settings.right_product_title != blank %}
          <h3 class="ai-comparison-chart__product-title-{{ ai_gen_id }}">{{ block.settings.right_product_title }}</h3>
        {% endif %}
      </div>

      <div class="ai-comparison-chart__features-{{ ai_gen_id }}">
        {% for i in (1..13) %}
          {% assign feature_key = 'right_feature_' | append: i %}
          {% assign feature_title_key = 'feature_title_' | append: i %}
          {% assign feature_value = block.settings[feature_key] %}
          {% assign feature_title = block.settings[feature_title_key] %}
          {% if feature_title != blank %}
            <div class="ai-comparison-chart__feature-row-{{ ai_gen_id }}">
              {% if feature_value != blank %}
                <div class="ai-comparison-chart__icon-{{ ai_gen_id }} ai-comparison-chart__icon--{{ feature_value }}-{{ ai_gen_id }}">
                  {% if feature_value == 'check' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/></svg>
                  {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/></svg>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

