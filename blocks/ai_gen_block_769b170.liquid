    },
    {
      "type": "text",
      "id": "reading_time",
      "label": "Reading time",
      "default": "5 min read"
    },
    {
      "type": "url",
      "id": "article_link",
      "label": "Article link"
    },
    {
      "type": "header",
      "content": "Tags"
    },
    {
      "type": "text",
      "id": "tag_1",
      "label": "Tag 1",
      "default": "Wellness"
    },
    {
      "type": "text",
      "id": "tag_2",
      "label": "Tag 2",
      "default": "Health"
    },
    {
      "type": "text",
      "id": "tag_3",
      "label": "Tag 3"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "primary_image",
      "label": "Background image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "headline_text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "tag_text_color",
      "label": "Tag text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 24,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Title font size",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Blog hero block"
    }
  ],
  "tag": null
}
{% endschema %}