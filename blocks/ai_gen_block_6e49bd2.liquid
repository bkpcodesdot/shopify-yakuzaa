{% doc %}
  @prompt
    Create a full-width hero banner section with a background image. Show left-aligned content including a heading, short description, and a call-to-action button. Style should be clean, premium, and modern like a jewelry brand. Make it fully responsive. All text, button label, link, and background image must be editable from the Shopify theme editor.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.min_height_desktop }}px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .ai-hero-banner__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ai-hero-banner__background-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ block.settings.image_position }};
  }

  .ai-hero-banner__background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-banner__background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-banner__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-hero-banner__container-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-hero-banner__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.text_max_width }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-banner__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-hero-banner__description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 0 0 {{ block.settings.description_spacing }}px;
    opacity: {{ block.settings.description_opacity | divided_by: 100.0 }};
  }

  .ai-hero-banner__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-hero-banner__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_bg_hover_color }};
    color: {{ block.settings.button_text_hover_color }};
    border-color: {{ block.settings.button_border_hover_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.min_height_mobile }}px;
    }

    .ai-hero-banner__container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical_mobile }}px {{ block.settings.padding_horizontal_mobile }}px;
    }

    .ai-hero-banner__content-{{ ai_gen_id }} {
      text-align: {{ block.settings.text_alignment_mobile }};
    }

    .ai-hero-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
      margin-bottom: {{ block.settings.heading_spacing_mobile }}px;
    }

    .ai-hero-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size_mobile }}px;
      margin-bottom: {{ block.settings.description_spacing_mobile }}px;
    }

    .ai-hero-banner__button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size_mobile }}px;
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-banner__background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        srcset="{{ block.settings.background_image | image_url: width: 750 }} 750w,
                {{ block.settings.background_image | image_url: width: 1500 }} 1500w,
                {{ block.settings.background_image | image_url: width: 2000 }} 2000w"
        sizes="100vw"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
        class="ai-hero-banner__background-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-hero-banner__background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-hero-banner__overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-banner__container-{{ ai_gen_id }}">
    <div class="ai-hero-banner__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-banner__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-hero-banner__description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}

      {% if block.settings.button_label != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-hero-banner__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

