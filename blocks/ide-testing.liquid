<div class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-header-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-testimonials-title-{{ ai_gen_id }}">
        {{ block.settings.title }}
      </h2>
    {% endif %}
    
    {% if block.settings.description != blank %}
      <div class="ai-testimonials-description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}
  </div>

  <div class="ai-testimonials-grid-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign quote_key = 'testimonial_' | append: i | append: '_quote'
        assign name_key = 'testimonial_' | append: i | append: '_name'
        assign age_key = 'testimonial_' | append: i | append: '_age'
        assign icon_key = 'testimonial_' | append: i | append: '_icon'
        assign enabled_key = 'testimonial_' | append: i | append: '_enabled'

        assign quote = block.settings[quote_key]
        assign name = block.settings[name_key]
        assign age = block.settings[age_key]
        assign icon = block.settings[icon_key]
        assign enabled = block.settings[enabled_key]
      %}

      {% if enabled %}
        <div class="ai-testimonial-card-{{ ai_gen_id }}">
          {% if quote != blank %}
            <div class="ai-testimonial-quote-{{ ai_gen_id }}">
              {{ quote }}
            </div>
          {% endif %}

          <div class="ai-testimonial-footer-{{ ai_gen_id }}">
            <div class="ai-testimonial-icon-{{ ai_gen_id }}">
              {% if icon %}
                <img src="{{ icon | image_url: width: 50 }}" alt="Customer verification icon" loading="lazy">
              {% else %}
                <div class="ai-testimonial-icon-placeholder-{{ ai_gen_id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                  </svg>
                </div>
              {% endif %}
            </div>
            
            <div class="ai-testimonial-customer-{{ ai_gen_id }}">
              {% if name != blank or age != blank %}
                <div class="ai-testimonial-name-{{ ai_gen_id }}">
                  {% if name != blank %}{{ name }}{% endif %}{% if age != blank %}, {{ age }}{% endif %}
                </div>
              {% endif %}
              <div class="ai-testimonial-verified-{{ ai_gen_id }}">
                {{ block.settings.verified_label }}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

  {% if block.settings.button_text != blank %}
    <div class="ai-testimonials-cta-{{ ai_gen_id }}">
      <a href="{{ block.settings.button_link }}" class="ai-testimonials-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    </div>
  {% endif %}
</div>

