<section class="primal-queen-section">
  {% for block in section.blocks %}
    {% case block.type %}

      {% when 'organ_block' %}
        <div class="organ-container block-{{ forloop.index }}">
          {% if block.settings.heading != blank %}
            <h2 class="organ-heading">{{ block.settings.heading }}</h2>
          {% endif %}
          {% if block.settings.subheading != blank %}
            <p class="organ-subheading">{{ block.settings.subheading }}</p>
          {% endif %}

          <div class="organ-items">
            {% for i in (1..6) %}
              {% assign icon_key = 'organ_icon_' | append: i %}
              {% assign title_key = 'organ_title_' | append: i %}
              {% assign compare_key = 'organ_compare_' | append: i %}
              {% assign note_key = 'organ_note_' | append: i %}

              {% assign organ_icon = block.settings[icon_key] %}
              {% assign organ_title = block.settings[title_key] %}
              {% assign organ_compare = block.settings[compare_key] %}
              {% assign organ_note = block.settings[note_key] %}

              {% if organ_icon != blank %}
                <div class="organ-item">
                  <div class="organ-top">
                    <img src="{{ organ_icon | img_url: '150x150' }}" alt="{{ organ_title }}">
                    <span class="organ-title">{{ organ_title }}</span>
                  </div>
                  {% if organ_compare != blank %}
                    <span class="organ-vs">vs</span>
                    <span class="organ-compare">{{ organ_compare }}</span>
                  {% endif %}
                  {% if organ_note != blank %}
                    <div class="organ-note">{{ organ_note }}</div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>

      {% when 'promise_block' %}
        <div class="promise-container block-{{ forloop.index }}">
          {% if block.settings.heading != blank %}
            <h2 class="promise-heading">{{ block.settings.heading }}</h2>
          {% endif %}

          <div class="promise-items">
            {% for i in (1..6) %}
              {% assign icon_key = 'icon_' | append: i %}
              {% assign icon_text_key = 'icon_text_' | append: i %}

              {% assign icon_image = block.settings[icon_key] %}
              {% assign icon_text  = block.settings[icon_text_key] %}

              {% if icon_image != blank and icon_text != blank %}
                <div class="promise-item">
                  <img src="{{ icon_image | img_url: '100x100' }}" alt="{{ icon_text }}">
                  <span class="item-text">{{ icon_text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</section>

<style>
.primal-queen-section {
  padding: 40px 20px;
  text-align: center;
}

/* Organ Section */
.organ-heading {
  font-size: 28px;
  font-weight: 700;
  margin-bottom: 15px;
  color: #3b0a55;
}
.organ-subheading {
  font-size: 16px;
  margin-bottom: 30px;
  color: #555;
}
.organ-items {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-bottom: 40px;
}
.organ-item {
  border: 2px solid #a64ca6;
  border-radius: 12px;
  padding: 20px;
  background: #fff;
}
.organ-top {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.organ-title {
  font-weight: bold;
  margin-top: 10px;
}
.organ-vs {
  display: block;
  margin: 10px 0;
  font-weight: bold;
  color: #444;
}
.organ-compare {
  font-size: 14px;
  color: #555;
}
.organ-note {
  margin-top: 10px;
  font-size: 13px;
  font-weight: 600;
  color: #a64ca6;
}

/* Promise Section */
.promise-heading {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 30px;
  color: #3b0a55;
}
.promise-items {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}
.promise-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 100px;
}
.promise-item img {
  width: 60px;
  height: 60px;
  object-fit: contain;
  margin-bottom: 10px;
}
.promise-item .item-text {
  font-size: 14px;
  color: #3b0a55;
  text-align: center;
}
</style>