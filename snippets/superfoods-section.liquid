<section class="primal-queen-section">
  {% for block in section.blocks %}
    <div class="combined-container block-{{ forloop.index }}">
      
      {%- comment -%} ===== ORGAN COMPARISON ===== {%- endcomment -%}
      {% if block.settings.main_heading != blank %}
        <h2 class="organ-heading">{{ block.settings.main_heading }}</h2>
      {% endif %}
      {% if block.settings.sub_heading != blank %}
        <p class="organ-subheading">{{ block.settings.sub_heading }}</p>
      {% endif %}

      <div class="organ-items">
        {% for i in (1..6) %}
          {% assign organ_image_key = 'organ_image_' | append: i %}
          {% assign organ_vs_image_key = 'organ_vs_image_' | append: i %}
          {% assign organ_text_key = 'organ_text_' | append: i %}

          {% assign organ_image = block.settings[organ_image_key] %}
          {% assign organ_vs_image = block.settings[organ_vs_image_key] %}
          {% assign organ_text = block.settings[organ_text_key] %}

          {% if organ_image != blank and organ_vs_image != blank and organ_text != blank %}
          <div class="organ-item">
            <div class="organ-imgs">
              <div class="img-wrapper">
                <img src="{{ organ_image | img_url: '150x150' }}" alt="Organ">
              </div>
              <span class="vs-text">vs</span>
              <div class="img-wrapper">
                <img src="{{ organ_vs_image | img_url: '150x150' }}" alt="Veggie">
              </div>
            </div>
            <p class="organ-desc">{{ organ_text }}</p>
          </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if block.settings.cta_label != blank and block.settings.cta_link != blank %}
        <div class="cta-wrapper">
          <a href="{{ block.settings.cta_link }}" class="cta-btn">{{ block.settings.cta_label }}</a>
        </div>
      {% endif %}

      {%- comment -%} ===== PROMISE SECTION ===== {%- endcomment -%}
      {% if block.settings.promise_heading != blank %}
        <h2 class="promise-heading">{{ block.settings.promise_heading }}</h2>
      {% endif %}

      <div class="promise-items">
        {% for i in (1..6) %}
          {% assign icon_key = 'icon_' | append: i %}
          {% assign icon_text_key = 'icon_text_' | append: i %}
          {% assign icon_image = block.settings[icon_key] %}
          {% assign icon_text = block.settings[icon_text_key] %}
          {% if icon_image != blank and icon_text != blank %}
          <div class="promise-item">
            <img src="{{ icon_image | img_url: '100x100' }}" alt="{{ icon_text }}">
            <span class="item-text">{{ icon_text }}</span>
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</section>

<style>
.primal-queen-section {
  padding: 40px 20px;
  text-align: center;
}

/* ===== ORGAN SECTION ===== */
.organ-heading {
  font-size: 28px;
  font-weight: 700;
  color: #3b0a55;
  margin-bottom: 15px;
}
.organ-subheading {
  font-size: 16px;
  color: #555;
  margin-bottom: 30px;
}
.organ-items {
  display: grid;
  grid-template-columns: repeat(auto-fit,minmax(220px,1fr));
  gap: 20px;
  justify-content: center;
}
.organ-item {
  border: 2px solid #6a1b9a;
  border-radius: 10px;
  padding: 15px;
  background: #fff;
}
.organ-imgs {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  margin-bottom: 10px;
}
.organ-imgs .img-wrapper img {
  width: 70px;
  height: 70px;
  object-fit: contain;
}
.vs-text {
  font-weight: bold;
  color: #ff4081;
}
.organ-desc {
  font-size: 14px;
  color: #3b0a55;
  font-weight: 600;
}
.cta-wrapper {
  margin: 20px 0;
}
.cta-btn {
  background: #00c853;
  color: #fff;
  font-weight: bold;
  padding: 12px 20px;
  border-radius: 6px;
  text-decoration: none;
  display: inline-block;
}
.cta-btn:hover {
  background: #009624;
}

/* ===== PROMISE SECTION ===== */
.promise-heading {
  font-size: 24px;
  font-weight: 700;
  margin: 30px 0;
  color: #3b0a55;
}
.promise-items {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}
.promise-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 100px;
}
.promise-item img {
  width: 60px;
  height: 60px;
  object-fit: contain;
  margin-bottom: 10px;
}
.promise-item .item-text {
  font-size: 14px;
  color: #3b0a55;
  text-align: center;
}
</style>
