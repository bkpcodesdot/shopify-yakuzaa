<section class="primal-queen-promise-section">
  {% for block in section.blocks %}
    <div class="promise-container block-{{ forloop.index }}">
      
      {% if block.settings.heading != blank %}
        <h2 class="promise-heading">{{ block.settings.heading }}</h2>
      {% endif %}
      
      <div class="promise-items">
       {% for i in (1..6) %}
  {% assign icon_key = 'icon_' | append: i %}
  {% assign icon_text_key = 'icon_text_' | append: i %}

  {% assign icon_image = block.settings[icon_key] %}
  {% assign icon_text  = block.settings[icon_text_key] %}

  {% if icon_image != blank and icon_text != blank %}
    <div class="promise-item">
      <img src="{{ icon_image | img_url: '100x100' }}" alt="{{ icon_text }}">
      <span class="item-text">{{ icon_text }}</span>
    </div>
  {% endif %}
{% endfor %}

      </div>
      
    </div>
  {% endfor %}
</section>

<style>
        .primal-queen-promise-section {
  text-align: center;
  padding: 40px 20px;
  background: #f7f0fc; /* optional background */
}

.primal-queen-promise-section .promise-heading {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 30px;
  color: #3b0a55;
}

.primal-queen-promise-section .promise-items {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}

.primal-queen-promise-section .promise-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 100px;
}

.primal-queen-promise-section .promise-item img {
  width: 60px;
  height: 60px;
  object-fit: contain;
  margin-bottom: 10px;
}

.primal-queen-promise-section .promise-item .item-text {
  font-size: 14px;
  color: #3b0a55;
  text-align: center;
}
      </style>