<section class="primal-queen-section">
  {% for block in section.blocks %}
    <div class="combined-container block-{{ forloop.index }}">
      
      {%- comment -%} ===== ORGAN CARDS ===== {%- endcomment -%}
      {% if block.settings.main_heading != blank %}
        <h2 class="organ-heading">{{ block.settings.main_heading }}</h2>
      {% endif %}
      {% if block.settings.sub_heading != blank %}
        <p class="organ-subheading">{{ block.settings.sub_heading }}</p>
      {% endif %}

      <div class="organ-grid">
        {% for i in (1..6) %}
          {% assign card_img_key = 'organ_card_image_' | append: i %}
          {% assign card_title_key = 'organ_card_title_' | append: i %}
          {% assign card_icon_key = 'organ_card_icon_' | append: i %}
          {% assign card_text_key = 'organ_card_text_' | append: i %}

          {% assign card_img = block.settings[card_img_key] %}
          {% assign card_title = block.settings[card_title_key] %}
          {% assign card_icon = block.settings[card_icon_key] %}
          {% assign card_text = block.settings[card_text_key] %}

          {% if card_img != blank %}
          <div class="organ-card">
            <img class="card-bg" src="{{ card_img | img_url: '600x400' }}" alt="{{ card_title }}">

            <div class="card-top">
              <h3 class="card-title">{{ card_title }}</h3>
              {% if card_icon != blank %}
                <img src="{{ card_icon | img_url: '40x40' }}" alt="icon" class="card-icon">
              {% endif %}
            </div>

            {% if card_text != blank %}
            <div class="card-bottom">
              <p>{{ card_text }}</p>
            </div>
            {% endif %}
          </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if block.settings.cta_label != blank and block.settings.cta_link != blank %}
        <div class="cta-wrapper">
          <a href="{{ block.settings.cta_link }}" class="cta-btn">{{ block.settings.cta_label }}</a>
        </div>
      {% endif %}

      {%- comment -%} ===== PROMISE SECTION ===== {%- endcomment -%}
      {% if block.settings.promise_heading != blank %}
        <h2 class="promise-heading">{{ block.settings.promise_heading }}</h2>
      {% endif %}

      <div class="promise-items">
        {% for i in (1..6) %}
          {% assign icon_key = 'icon_' | append: i %}
          {% assign icon_text_key = 'icon_text_' | append: i %}
          {% assign icon_img = block.settings[icon_key] %}
          {% assign icon_text = block.settings[icon_text_key] %}
          {% if icon_img != blank and icon_text != blank %}
          <div class="promise-item">
            <img src="{{ icon_img | img_url: '100x100' }}" alt="{{ icon_text }}">
            <span class="item-text">{{ icon_text }}</span>
          </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</section>

<style>
.primal-queen-section {
  padding: 40px 20px;
  text-align: center;
}

/* ===== ORGAN SECTION ===== */
.organ-heading {
  font-size: 28px;
  font-weight: 700;
  color: #3b0a55;
  margin-bottom: 15px;
}
.organ-subheading {
  font-size: 16px;
  color: #555;
  margin-bottom: 30px;
}
.organ-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit,minmax(250px,1fr));
  gap: 20px;
}
.organ-card {
  position: relative;
  border-radius: 10px;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 4px 8px rgba(0,0,0,0.15);
}
.organ-card .card-bg {
  width: 100%;
  height: auto;
  display: block;
}
.card-top {
  position: absolute;
  top: 10px;
  left: 10px;
  right: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.card-title {
  font-size: 16px;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2px 4px rgba(0,0,0,0.6);
}
.card-icon {
  width: 30px;
  height: 30px;
}
.card-bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #d81b60;
  padding: 6px 10px;
}
.card-bottom p {
  font-size: 13px;
  color: #fff;
  margin: 0;
  font-weight: 500;
}

/* ===== CTA ===== */
.cta-wrapper {
  margin: 30px 0;
}
.cta-btn {
  background: #00c853;
  color: #fff;
  font-weight: bold;
  padding: 12px 20px;
  border-radius: 6px;
  text-decoration: none;
  display: inline-block;
}
.cta-btn:hover {
  background: #009624;
}

/* ===== PROMISE SECTION ===== */
.promise-heading {
  font-size: 24px;
  font-weight: 700;
  margin: 30px 0;
  color: #3b0a55;
}
.promise-items {
  display: flex;
  justify-content: center;
  gap: 30px;
  flex-wrap: wrap;
}
.promise-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 100px;
}
.promise-item img {
  width: 60px;
  height: 60px;
  object-fit: contain;
  margin-bottom: 10px;
}
.promise-item .item-text {
  font-size: 14px;
  color: #3b0a55;
  text-align: center;
}
</style>


