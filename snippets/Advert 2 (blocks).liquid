<div class="ai-parasite-block" {{ block.shopify_attributes }}>
  {% if block.settings.icon != blank %}
    <div class="ai-parasite-icon">
      <img src="{{ block.settings.icon | image_url: width: 100 }}" alt="{{ block.settings.heading | escape }}">
    </div>
  {% endif %}

  {% if block.settings.heading != blank %}
    <h3 class="ai-parasite-heading">{{ block.settings.heading }}</h3>
  {% endif %}

  {% if block.settings.description != blank %}
    <p class="ai-parasite-description">{{ block.settings.description }}</p>
  {% endif %}
</div>

{% style %}
.ai-parasite-block {
  margin-bottom: 30px;
}
.ai-parasite-icon img {
  max-width: 80px;
  margin: 0 auto 10px;
}
.ai-parasite-heading {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 8px;
}
.ai-parasite-description {
  font-size: 16px;
  line-height: 1.4;
  color: #444;
}
{% endstyle %}
